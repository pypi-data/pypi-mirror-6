{# A nav list with bootstrap-friendly active class #}
{%- macro render_nav(active) -%}
  {%- set navigation = 
    [
     ('tasks', 'show_tasks'),
     ('debug', 'show_debug'),
     ('help', 'show_help'),
    ]
  -%}
  {% for name, func in navigation %}
    {{ render_li(name, func, name == active) }}
  {%- endfor -%}
{%- endmacro %}

{%- macro render_li(name, target, active) -%}
<li{% if active %} class="active"{% endif %}><a href="{{ url_for(target) }}">{{ name|capitalize }}</a></li>
{%- endmacro -%}
