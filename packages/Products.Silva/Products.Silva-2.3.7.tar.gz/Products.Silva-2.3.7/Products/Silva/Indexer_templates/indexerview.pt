<tal:def xmlns:i18n="http://xml.zope.org/namespaces/i18n"
         i18n:domain="silva">

  <h2 tal:content="content/get_title_or_id | default"
      i18n:translate="">
    Index
  </h2>

  <table class="silvatable indexer"
         tal:define="indexTitles content/getIndexNames">
    <thead>
      <tr>
        <th class="align-left"
            i18n:translate="">
          Terms
        </th>
        <th class="align-left"
            i18n:translate="">
          Links
        </th>
      </tr>
    </thead>
    <tbody tal:condition="indexTitles">
      <tal:loop tal:repeat="indexTitle indexTitles">
        <tal:def tal:define="iterate repeat/indexTitle/odd;
                             indexEntry python:content.getIndexEntry(indexTitle);">
          <tr tal:attributes="class python:iterate and 'even' or 'odd'">
            <td tal:content="indexTitle">
              Term
            </td>
            <td>
              <tal:index tal:repeat="link python:view.links(indexEntry)">
                <tal:link tal:content="structure link" />
                <br />
              </tal:index>
            </td>
          </tr>
        </tal:def>
      </tal:loop>
    </tbody>
    <tbody tal:condition="not:indexTitles">
      <tr>
        <td colspan="2"
            i18n:translate="">
          No index items listed or found.
        </td>
      </tr>
    </tbody>
  </table>
</tal:def>
