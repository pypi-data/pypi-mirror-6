<html tal:replace="structure context/manage_page_header"/>

    <span tal:replace="structure context/manage_tabs"/>

<br/>
<table width="100%">
  <tr>
    <td valign="top" width="50%">
      <form action="" tal:attributes="action request/URL1" method="post">
         <table cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Name</td>
                  <td class="form-element">
                      <input type="text" class="form-element" name="title" size="35" value=""
                            tal:attributes="value context/title | nothing"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Tax Number</td>
                  <td class="form-element">
                      <input type="text" class="form-element" name="tax_number" size="12" value=""
                            tal:attributes="value context/tax_number | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label">Bank Account</td>
                  <td class="form-element">
                      <input type="text" class="form-element" name="bank_account" size="30" value=""
                            tal:attributes="value context/bank_account | nothing"/>
                  </td>
              </tr>
             <tr>
                  <td class="form-optional" valign="top">Address</td>
                  <td class="form-element" tal:define="address context/address">
                      <textarea name="address:text" class="form-element" rows="4" cols="40" 
                                tal:content="address"/> 
                  </td>
              </tr>
              <tr>
                  <td class="form-optional">Phone</td>
                  <td class="form-element">
                      <input type="text" class="form-element" name="phone" size="35" value=""
                            tal:attributes="value context/phone | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label">Email</td>
                  <td class="form-element">
                      <input type="text" class="form-element" name="email" size="35" value=""
                            tal:attributes="value context/email | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label">Date of Birth</td>
                  <td class="form-element">
                      <input type="text" name="dob:date" size="12" value=""
                            tal:attributes="value context/date_of_birth | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label">Super Fund Number</td>
                  <td class="form-element">
                      <input type="text" name="super_number" size="20" value=""
                            tal:attributes="value context/super_number | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label" valign="top">Super Fund Details</td>
                  <td class="form-element">
                      <textarea name="super_details:text" rows="4" cols="30"
                            tal:content="context/super_details | nothing"/>
                  </td>
              </tr>
              <tr>
                 <td colspan=2>
                   <input type="submit" name="manage_edit_public:method" value=" Edit ">
                 </td>
              </tr>
        </table>
      </form>
    </td>
    <td valign="top" width="50%">
       <table cellspacing="0" cellpadding="2" border="0" width="100%">
         <tr>
           <td colspan="2" align="right" tal:define="products python:context.filtered_meta_types(request)">
                 <form method="get" action="" tal:attributes="action request/URL1">
                     <div tal:condition="python: len(products) > 1" tal:omit-tag="">
                         <select class="form-element" name=":action"
                                 onchange="" tal:attributes="onchange string:location.href='${request/URL1}/'+this.options[this.selectedIndex].value">
                             <option value="manage_workspace" disabled>Select type to add...</option>
                             <option tal:repeat="product products"
                                     value="" tal:attributes="value product/action"
                                     tal:content="product/name"/>
                          </select>
                          <input class="form-element" type="submit" value=" Add ">
                      </div>
                      <div tal:condition="python: len(products) == 1" tal:omit-tag="">
                          <span tal:define="product python:products[0]" tal:omit-tag="">
                             <input type="hidden" name=":method" value="" tal:attributes="value product/action"/>
                             <input class="form-element" type="submit" name="submit" value=""
                                    tal:attributes="value string: Add ${product/name}" />
                          </span>
                      </div>
                 </form>
                 <br/>
              </td>
            </tr>
            <form action="" tal:attributes="action request/URL1" method="post">
            <tr>
                  <td class="form-optional">Department</td>
                  <td class="form-element">
                      <input type="text" name="department" size="35" value=""
                            tal:attributes="value context/department | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-optional" nowrap>Start Date</td>
                  <td class="form-element">
                      <input type="text" name="start_day:date" size="10" value=""
                            tal:attributes="value python: context.start_day.strftime('%Y/%m/%d')"/>
                  </td>
              </tr>
             <tr>
                  <td class="form-optional">Salary</td>
                  <td class="form-element">
                      <input type="text" name="salary:currency" size="15" align="right" value=""
                            tal:attributes="value context/salary | nothing"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" nowrap>Hourly Rate</td>
                  <td class="form-element">
                      <input type="text" name="hourly_rate:currency" size="15" align="right" value=""
                            tal:attributes="value context/hourly_rate | nothing"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-optional">Basis</td>
                  <td class="form-element">
                      <select name="basis">
                           <option tal:repeat="b context/Basis" tal:content="b"
                                   tal:attributes="selected python: b == context.basis"/>
                      </select>
                  </td>
              </tr>
              <tr>
                  <td class="form-label" nowrap>Tax Code</td>
                  <td class="form-element">
                      <input type="text" name="tax_code" size="2" value=""
                            tal:attributes="value context/tax_code | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label" nowrap>Accrued Leave</td>
                  <td class="form-element">
                      <input type="text" name="accrued_leave:float" size="4" value=""
                            tal:attributes="value context/accrued_leave | nothing"/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label" nowrap>Sick Days Owing</td>
                  <td class="form-element">
                      <input type="text" name="sick_days:float" size="4" value=""
                            tal:attributes="value context/sick_days | nothing"/>
                  </td>
              </tr>
              <tr>
                 <td colspan=2>
                   <input type="submit" name="manage_edit_private:method" value=" Edit ">
                 </td>
              </tr>
            </form>
        </table>
    </td>
  </tr>
</table>


<html tal:replace="structure context/manage_page_footer"/>




