<tal:toc>
  <h2 class="heading"
      tal:define="heading context/get_title"
      tal:condition="not:request/other/suppress_title | nothing"
      tal:content="heading"
      tal:omit-tag="not:heading">
    Title
  </h2>

  <p class="content-description"
     tal:condition="view/description"
     tal:content="view/description" />

  <h3 tal:condition="context/get_show_container_link">
    <a tal:define="container context/get_container"
       tal:attributes="href container/@@absolute_url"
       tal:content="container/get_title" />
  </h3>
  <ul tal:replace="structure view/tree" />
</tal:toc>
