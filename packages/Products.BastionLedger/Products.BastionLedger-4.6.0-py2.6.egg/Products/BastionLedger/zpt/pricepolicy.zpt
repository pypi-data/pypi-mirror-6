<html tal:replace="structure context/manage_page_header"/>

    <span tal:replace="structure context/manage_tabs"/>

    <br/>
    <form name="policy" action="manage_policy" method="post">
	<table>
          <tr>
              <td class="form-label">Policy</td>
              <td class="form-element">
                  <select name="policy" onchange="document.policy.submit()">
                     <option selected=""
                             tal:repeat="policy context/pricePolicies"
                             tal:content="policy"
                             tal:attributes="selected python:getattr(context, 'pricepolicy', '') == policy and 1 or 0"/>
                  </select>
              </td>
          </tr>
          <div tal:replace="structure python: context.getPricePolicy().render_form(context)" tal:on-error="string:"/>
          <tr>
              <td colspan=2>
                   <input type="submit" value=" Edit ">
              </td>
          </tr>
        </table>
    </form>

<html tal:replace="structure context/manage_page_footer"/>
