{% extends "_view.jinja" %}

{% from "_sidebar.jinja" import sidebar %}

{% block script %}
  {{ super() }}
  <script src="{{ cdn_url_for('polaris.js') }}"></script>
{% endblock %}

{% block head %}
    <style>
      .chart-container {
        height: 500px;
      }
    </style>
{% endblock %}

{% block body %}
  <body ng-controller="ChartCtrl">
    {{
      sidebar(user=user, href={
        "fui-plus": "/chart/new",
        "fui-new": "/chart/edit/{}".format(uuid)
      })
    }}
    <div class="content">
      <div class="container" style="width:80%;padding-top:2%;">
        {% include "_chart.jinja" %}
      </div>
    </div>
  </body>
{% endblock %}
