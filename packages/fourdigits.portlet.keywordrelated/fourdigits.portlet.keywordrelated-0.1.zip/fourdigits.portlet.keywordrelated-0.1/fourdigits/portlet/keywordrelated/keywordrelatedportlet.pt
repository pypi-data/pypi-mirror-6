<dl class="portlet portletKeywordRelatedPortlet"
    i18n:domain="fourdigits.portlet.keywordrelated">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        Related Items
        <span class="portletTopRight"></span>
    </dt>

    <tal:loopItems tal:omit-tag="" tal:repeat="item view/items">
        <dd tal:define="isOdd repeat/item/odd"
            tal:attributes="
                class python: isOdd and 'portletItem odd' or 'portletItem'">
            <a tal:attributes="href item/getURL;
                               title item/Description | nothing;"
                tal:content="item/Title">[Related item title]</a>
            <tal:ifDescription tal:condition="item/Description | nothing">
                <br />
                <span class="description"
                    tal:content="item/Description">[description]</span>
                <a class="more">Read more&hellip;</a>
            </tal:ifDescription>
        </dd>
    </tal:loopItems>

    <dd tal:condition="view/show_footer"
        class="portletFooter">
        <span class="portletBottomLeft"></span>
        Footer
        <span class="portletBottomRight"></span>
    </dd>

</dl>
