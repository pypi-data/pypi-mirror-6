<html tal:replace="structure context/manage_page_header"/>

    <div tal:replace="structure python:context.manage_form_title(context, context,
           form_title='<img src=%s/misc_/BastionLedger/entry_template> %s' % (request['BASEPATH1'],
'Add Entry Template'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

     <form action="manage_addBLEntryTemplate" method="post">
          <table width="100%" cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Id</td>
                  <td class="form-element">
                      <input type="text" name="id" size="15">
                  </td>
              </tr>
               <tr>
                  <td class="form-label">Description</td>
                  <td class="form-element">
                      <input type="text" name="title" size="35">
                  </td>
              </tr>
             <tr>
                  <td class="form-label">Account</td>
                  <td class="form-element">
                       <select name="account">
                            <option value="">Subsidiary Account...</option>
                            <option tal:repeat = "account context/Ledger/accountValues"
                                    value="" tal:attributes="value account/getId"
                                    tal:content="account/prettyTitle"/>
                      </select>
                  </td>
              </tr>
               <tr>
                  <td class="form-label">Currency</td>
                  <td class="form-element">
                      <select name="currency">
                           <option tal:repeat="currency context/Ledger/currencies"
                                   tal:content="currency"/>
                      </select>
                  </td>
              </tr>
              <tr>
                  <td class="form-element">
                     <input type="submit" value=" Add ">
       		  </td>
              </tr>
          </table>
     </form>
   
<html tal:replace="structure context/manage_page_footer"/>
