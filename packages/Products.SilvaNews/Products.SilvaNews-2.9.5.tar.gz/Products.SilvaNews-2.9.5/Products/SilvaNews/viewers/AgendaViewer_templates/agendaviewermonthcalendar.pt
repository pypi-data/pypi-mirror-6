<html tal:omit-tag=""
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva_news">

  <h2 class="heading" tal:content="context/get_title">
    View News
  </h2>

  <div class="calendar_actions">
    <a tal:attributes="href view/subscribe_url" class="next">
      <img tal:attributes="src view/subscribe_img_url" />
      <tal:msg i18n:translate="">Subscribe to this calendar</tal:msg>
    </a>
  </div>

  <div class="calendar" tal:content="structure view/render_calendar" />
  <h3 class="calendar_intro" tal:content="view/intro" />

  <div class="newsitem" tal:repeat="event view/day_events">
    <div tal:attributes="class python:repeat['event'].odd and 'odd' or 'even'">
      <div tal:replace="structure event/@@search_result" />
    </div>
  </div>

  <p class="p archivelink">
    <a tal:attributes="href view/archive_url"
     i18n:translate="">
     view archive
   </a>
  </p>
</html>
