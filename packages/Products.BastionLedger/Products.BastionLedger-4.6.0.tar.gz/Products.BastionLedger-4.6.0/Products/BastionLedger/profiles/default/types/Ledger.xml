<?xml version="1.0"?>
<object name="Ledger" meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title"></property>
 <property name="description">Financial Recording/Reporting System.</property>
 <property name="content_icon">bastionledger.gif</property>
 <property name="content_meta_type">Ledger</property>
 <property name="product">BastionLedger</property>
 <property name="factory">addBastionLedger</property>
 <property name="immediate_view">folder_listing</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
  <element value="BLAssetRegister"/>
  <element value="BLCashBook"/>
  <element value="BLForecaster"/>
  <element value="BLInventory"/>
  <element value="BLPayroll"/>
  <element value="BLOrderBook"/>
  <element value="BLQuoteManager"/>
  <element value="BLShareholderLedger"/>
  <element value="BLSubsidiaryLedger"/>
 </property>
 <property name="allow_discussion">False</property>
 <alias from="(Default)" to="folder_listing"/>
 <alias from="edit" to="blledger_edit_form"/>
 <alias from="details" to="blcompany_info"/>
 <alias from="reports" to="blreports_view"/>
 <alias from="transactions" to="bltransactions_view"/>
 <alias from="balancesheet" to="blbalance_sheet"/>
 <alias from="revenuestmt" to="blrevenue_statement"/>
 <alias from="cashflow" to="blcashflow_statement"/>
 <alias from="periodend" to="blperiod_end_form"/>
 <alias from="view" to="folder_listing"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/view" visible="True">
  <permission value="View"/>
 </action>
 <action title="Details" action_id="details" category="object"
    condition_expr="" url_expr="string:${object_url}/details"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="BastionLedger: Operate"/>
 </action>
 <action title="Reports" action_id="reports" category="object"
    condition_expr="" url_expr="string:${object_url}/reports"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="Transactions" action_id="transactions" category="object"
    condition_expr="" url_expr="string:${object_url}/transactions"
    visible="True">
  <permission value="BastionLedger: Manage"/>
 </action>
 <action title="Balance Sheet" action_id="balancesheet" category="object"
    condition_expr="" url_expr="string:${object_url}/balancesheet"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="Revenue Stmt" action_id="revenuestmt" category="object"
    condition_expr="" url_expr="string:${object_url}/revenuestmt"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="Cashflow Stmt" action_id="cashflow" category="object"
    condition_expr="" url_expr="string:${object_url}/cashflow"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="EOD/EOP" action_id="periodend" category="object"
    condition_expr="" url_expr="string:${object_url}/periodend"
    visible="True">
  <permission value="BastionLedger: Operate"/>
 </action>
</object>
