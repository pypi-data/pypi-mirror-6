<tal:var define="presentation view/presentation;" i18n:domain="ztfy.bootstrap">
	<div class="social">
		<div class="fblike" tal:condition="presentation/display_fb_like">
			<fb:like send="true" layout="button_count" width="200" show_faces="true"></fb:like>
		</div>
		<div tal:condition="presentation/display_googleplus" class="plusone">
			<div class="g-plusone" data-size="medium"></div>
		</div>
	</div>
	<h1 tal:content="context/i18n:title" />
	<tal:var define="heading context/i18n:heading;
					 position presentation/header_position;">
		<div class="container-fluid" tal:omit-tag="position">
			<div class="row-fluid" tal:omit-tag="position">
				<div class="heading" tal:define="renderer heading/html:renderer;"
									 tal:condition="heading"
									 tal:attributes="class python:'heading span8' if not position else 'heading'"
									 tal:content="structure python:renderer.render(presentation.header_format, request)" />
				<div class="topics" tal:define="blogs presentation/main_blogs"
									tal:condition="blogs"
									tal:attributes="class python:'topics span4' if not position else 'topics'">
					<div class="topic" tal:repeat="topic view/topics">
						<tal:var content="structure topic/@@preview" />
					</div>
				</div>
			</div>
		</div>
	</tal:var>
</tal:var>