{% block basic %}
<div class="control-group">
  {% if label %}
  <label class="control-label" id="{{ id_for_label }}" for="{{ id }}">{{ label }}</label>
  {% endif %}
  <div class="controls">
    <input
      type="{{ field_type|default:"text" }}"
      name="{{ html_name }}"
      id="{{ id }}"
      value="{{ value|default:"" }}"
      class="{{ css_classes }}"
      {{ required|yesno:"required," }}>
  </div>
</div>
<span class="help-block">{{ help_text }}</span>
{% endblock %}

{% block inline %}
  {% if label %}
  <label class="control-label" id="{{ id_for_label }}" for="{{ id }}">{{ label }}</label>
  {% endif %}
  <div class="controls">
    <input
      type="{{ field_type|default:"text" }}"
      name="{{ html_name }}"
      id="{{ id }}"
      value="{{ value|default:"" }}"
      class="{{ css_classes }}"
      {{ required|yesno:"required," }}>
  </div>
{% endblock %}

{% block actions %}
<div class="control-group">
  <div class="controls">
    <button type="submit">{{ submit }}</button>
  </div>
</div>

{% endblock %}
