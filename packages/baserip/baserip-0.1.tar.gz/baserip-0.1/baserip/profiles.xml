<?xml version="1.0"?>
<profiles>
    <vcodec type="copy" passes="1" bpp="0.0">
        <profile name="Default">
            <mencoder>-ovc copy</mencoder>
        </profile>
    </vcodec>
    <vcodec type="mp4" passes="3" bpp="0.14">
        <profile name="Xvid Compatibility">
            <mencoder>-ovc lavc -lavcopts vcodec=mpeg4:vhq:v4mv:vqmin=2</mencoder>
        </profile>
    </vcodec>
    <vcodec type="xvid" passes="3" bpp="0.14">
        <profile name="Realtime">
            <mencoder>-ovc xvid -xvidopts turbo:nochroma_me:notrellis:max_bframes=0:vhq=0</mencoder>
        </profile>
        <profile name="Fast">
            <mencoder>-ovc xvid -xvidopts turbo:vhq=0</mencoder>
        </profile>
        <profile name="High Quality">
            <mencoder>-ovc xvid -xvidopts vhq=2:bvhq=1:chroma_opt:quant_type=mpeg</mencoder>
        </profile>
        <profile name="Very High Quality">
            <mencoder>-ovc xvid -xvidopts chroma_opt:vhq=4:bvhq=1:quant_type=mpeg</mencoder>
        </profile>
    </vcodec>
    <vcodec type="x264" passes="4" bpp="0.07">
        <profile name="Fast">
            <mencoder>-ovc x264 -x264encopts subq=4:bframes=2:b_pyramid=normal:weight_b</mencoder>
        </profile>
        <profile name="High Quality">
            <mencoder>-ovc x264 -x264encopts subq=5:8x8dct:frameref=2:bframes=3:b_pyramid=normal:weight_b</mencoder>
        </profile>
        <profile name="Very High Quality">
            <mencoder>-ovc x264 -x264encopts subq=6:partitions=all:8x8dct:me=umh:frameref=5:bframes=3:b_pyramid=normal:weight_b</mencoder>
        </profile>
    </vcodec>
    <acodec type="copy">
        <profile name="Default">
            <mencoder>-oac copy</mencoder>
        </profile>
    </acodec>
    <acodec type="mp3">
        <profile name="Default: ABR 128k">
            <mencoder>-oac mp3lame -lameopts preset=128</mencoder>
            <bitrate>128000</bitrate>
        </profile>
    </acodec>
</profiles>
