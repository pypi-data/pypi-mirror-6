<html tal:replace="structure container/manage_page_header"/>
     <span tal:replace="structure context/manage_tabs"/>

     <br/>
       <form action="" method="post" tal:attributes="action request/URL1">
         <input type="hidden" name="dispatch_to" value="manage_propertiesForm"/>
         <table cellspacing="0" cellpadding="2" border="0">
              <metal:fields use-macro="here/manage_ledgerPropsForm/macros/ledgerprops"/>
              <tr>
                 <td class="form-label">Inventory</td>
                 <td class="form-element">
                     <select name="inventory">
                          <option tal:repeat="inv python: container.aq_parent.objectIds('BLInventory')"
                                  tal:content="inv"
                                  tal:attributes="selected python: context.inventory == inv, 1, 0"/>
                     </select>
                 </td>
              </tr>
              <tr>
                  <td class="form-label">Correspondence Email</td>
                  <td class="form-element">
                      <input type="text" name="email" size="30" value=""
                            tal:attributes="value container/email | nothing">
                  </td>
              </tr>
              <tr tal:condition="python: context.hasProperty('instructions')">
                  <td class="form-label" valign="top">Instructions</td>
                  <td class="form-element">
                      <textarea type="text" name="instructions:text" rows="5" cols="50"
                                tal:content="context/instructions | nothing"/>
                  </td>
              </tr>
              <tr><td><input type="submit"  value="  Edit  " 
                             name="manage_edit:method" class="form-element"/></td></tr>
         </table>
       </form>
<html tal:replace="structure container/manage_page_footer"/>




