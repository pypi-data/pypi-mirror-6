<div class="logged-in" i18n:domain="ztfy.bootstrap">
	<tal:if condition="python:request.principal.id == 'zope.anybody'">
		<a class="btn btn-primary" role="button" data-target="#login_form" data-toggle="modal"
		   tal:attributes="href string:${context/@@absolute_url}/@@login.html" i18n:translate="">Login</a>
		<div id="login_form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="login_form_label" aria-hidden="true">
			<form name="login_form" method="post" class="form-horizontal" data-ztfy-submit-callback="$.ZBlog.actions.login"
				  tal:attributes="action string:${context/@@absolute_url}/@@login.html">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
					<h3 id="login_form_label" i18n:translate="">Connexion settings</h3>
				</div>
				<div class="modal-body">
					<fieldset>
						<div class="control-group">
							<label class="control-label" for="login_username" i18n:translate="">Username</label>
							<div class="controls">
								<input type="text" id="login_username" name="login" />
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="login_username" i18n:translate="">Password</label>
							<div class="controls">
								<input type="password" id="login_password" name="password" />
							</div>
						</div>
					</fieldset>
				</div>
				<div class="modal-footer">
					<button class="btn btn-primary" i18n:translate="">Login</button>
					<button class="btn" data-dismiss="modal" aria-hidden="true" i18n:translate="">Cancel</button>
				</div>
			</form>
		</div>
	</tal:if>
	<tal:if condition="python:request.principal.id != 'zope.anybody'">
		<div class="btn-group">
			<span class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
				<i class="icon icon-user icon-white"></i>
				<tal:var content="request/principal/title" />&nbsp;<span class="caret"></span>
			</span>
			<ul class="dropdown-menu">
				<li tal:condition="context/permission:ztfy.ViewManagementScreens">
					<a tal:attributes="href view/manage_url" i18n:translate="">Manage</a>
				</li>
				<li><a href="javascript:$.ZBlog.actions.logout()" i18n:translate="">Logout</a></li>
			</ul>
		</div>
	</tal:if>
</div>
