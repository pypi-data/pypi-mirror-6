#!/usr/bin/env python
# encoding: utf-8
'''
JIST-run -- JIST command line interface as part of PyJIST

@author:     Andrew Asman
@copyright:  2014 Medical-image Analysis and Statistical Interpretation (MASI). All rights reserved.
@license:    license
@contact:    andrew.j.asman@gmail.com
@deffield    updated: Updated
'''

import sys
import os

from PyJIST import PyJIST

__version__ = 0.1
__date__ = '2014-02-17'
__updated__ = '2014-03-27'
__organization__ = 'MASI, Vanderbilt University'
info = {'program_name': None,
        'program_version': None,
        'program_build_date': None,
        'program_version_message': None,
        'program_shortdesc':  None,
        'program_license': None,
       }

info['program_name'] = os.path.basename(sys.argv[0])
info['program_version'] = "v%s" % __version__
info['program_build_date'] = str(__updated__)
info['program_version_message'] = '%%(prog)s %s (%s)' % (info['program_version'], info['program_build_date'])
info['program_shortdesc'] = __import__('__main__').__doc__.split("\n")[1]
info['program_license'] = '''%s

  Created by Andrew Asman on %s (most recently updated on %s).
  Copyright 2014 %s. All rights reserved..

USAGE
''' % (info['program_shortdesc'],
       str(__date__),
       info['program_build_date'],
       str(__organization__))

def main():
    PyJIST().go(sys.argv, info)
    return(0)

if __name__ == "__main__":
    sys.exit(main())
    
