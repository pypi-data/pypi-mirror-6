<a tal:condition="view/display_terms_selector"
   class="hint nohide toleft" style="bottom: -1px;" title="Display terms selector" i18n:domain="ztfy.thesaurus" i18n:attributes="title"
   tal:attributes="href string:javascript:$$.ZTFY.thesaurus.tree.openSelector('${view/getThesaurusURL}/@@selector.html?extract=${view/extract_name}', '${view/name}');">
	<span class="icon icon-list"></span>
</a>
<input type="text"
	data-ztfy-widget="multiselect"
	data-multiselect-class="directory"
	data-multiselect-separator="|"
	data-multiselect-search-callback="$.ZTFY.thesaurus.findTerms"
	data-multiselect-max-results="50"
	data-multiselect-enable-new="false"
	data-multiselect-complex-search="false"
	tal:attributes="id view/id;
					name view/name;
					class view/klass;
					style view/style;
					title view/title;
					value view/value;
					lang view/lang;
					onclick view/onclick;
					ondblclick view/ondblclick;
					onmousedown view/onmousedown;
					onmouseup view/onmouseup;
					onmouseover view/onmouseover;
					onmousemove view/onmousemove;
					onmouseout view/onmouseout;
					onkeypress view/onkeypress;
					onkeydown view/onkeydown;
					onkeyup view/onkeyup;
					disabled view/disabled;
					tabindex view/tabindex;
					onfocus view/onfocus;
					onblur view/onblur;
					onchange view/onchange;
					readonly view/readonly;
					accesskey view/accesskey;
					onselect view/onselect;
					data-multiselect-search-args string:${view/thesaurus_name};;${view/extract_name};
					data-multiselect-backspace-removes-last python:'true' if view.backspace_removes_last else 'false'; " />
<input name="field-empty-marker" type="hidden" value="1"
	   tal:attributes="name string:${view/name}-empty-marker" />
