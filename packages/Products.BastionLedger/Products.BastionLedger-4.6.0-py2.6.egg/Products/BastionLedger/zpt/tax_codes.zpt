<html tal:replace="structure context/manage_page_header"/>

  <body>

    <span tal:replace="structure context/manage_tabs"/>

    <br/>

    <form action="" method="post" tal:attributes="action request/URL1"
          tal:define="tax_codes context/tax_codes">
       <table border="0" cellpadding="2" cellspacing="0">
           <tr tal:condition="tax_codes/keys">
              <td class="form-label"/>
              <td class="form-label">Group</td>
              <td class="form-label">Codes</td>
           </tr>
           <tr tal:repeat="k tax_codes/keys">
              <td class="list-item" valign="top">
                  <input type="checkbox" name="ids:list" value="" tal:attributes="value k"/>
              </td>
              <tal:block tal:define="tt python: context.taxTable(k)">
                  <td class="list-item" valign="top" tal:content="tt/title_or_id"/>
                  <td class="list-item" valign="top" 
                      tal:define="codes python: tax_codes[k];
                                  all tt/taxCodes">
                     <select name="tax_codes.:list" multiple size="3" 
                             tal:condition="all"
                             tal:attributes="name string:tax_codes.${k}:list:record">
                         <option tal:repeat="c all"
                                 tal:content="c"
                                 tal:attributes="selected python: c in codes and 1 or 0"/>
                     </select>
                 </td>
              </tal:block>
           </tr>
           <tr>
              <td colspan="3" tal:condition="tax_codes/keys">
                  <input type="submit" name="manage_delTaxGroups:method"  value=" Delete " />
                  <input type="submit" name="manage_editTaxCodes:method" value="  Edit  " />
              </td>
           </tr>
           <tr tal:define="available context/availableTaxTables"
               tal:condition="available">
               <td colspan="3">
                  <select name="id">
                      <option tal:repeat="a available" 
                              tal:content="a/title_or_id" 
                              tal:attributes="value a/getId"/>
                  </select>
                  <input type="submit" name="manage_addTaxGroup:method" value="  Add  "/>
               </td>
           </tr>
        </table>
    </form>

  </body>

<html tal:replace="structure context/manage_page_footer"/>



