<tal:var define="section request/data:ztfy.blog.section.selected">
	<li class="nav-header"
		tal:condition="python:section is not None"
		tal:content="section/i18n:title" />
	<tal:var define="sections view/sections">
		<li tal:repeat="item sections"
			tal:attributes="class python:item['selected'] and 'active' or None;">
			<a tal:define="section item/section"
			   tal:attributes="href section/@@absolute_url">
			   <i class="icon icon-chevron-right"></i>
			   <span tal:content="section/i18n:shortname" />
			</a>
			<ul tal:define="subsections item/subsections;
							subselected item/subselected;">
				<tal:loop repeat="section subsections">
					<li tal:attributes="class python:section in subselected and 'selected' or None;">
						<a tal:attributes="href section/@@absolute_url"
						   tal:content="section/i18n:shortname" />
					</li>
				</tal:loop>
			</ul>
		</li>
		<p tal:condition="not:sections" tal:content="section/i18n:description" />
	</tal:var>
</tal:var>