<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bastionledger">
 
<body>
  <div metal:fill-slot="main" 
       tal:define="entries here/orderItemValues;
                   account context/accno;
                   utool context/@@plone_portal_state/portal_url;
                   order context/orderno;
                   orderbooks context/orderbooks">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="context/Title | context/getId"/></h1>

      <form name="edit_form" method="post" action="" tal:attributes="action string:${template/getId}">

          <div class="field"
               tal:condition="python:site_properties.getProperty('visible_ids', None)"
               tal:define="error errors/id | nothing;
                           id python:request.get('id', here.show_id() and here.getId() or '');"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="id" i18n:translate="label_short_name">Short Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Short Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

            <input type="hidden"
                   name="id"
                   tal:condition="python:not site_properties.getProperty('visible_ids', '')"
                   tal:attributes="value python:request.get('id', here.getId())" />

          </div>

          <div metal:use-macro="context/blorder_edit_form/macros/order"/>


          <div class="field"
               tal:define="error errors/phone|nothing;
                           Phone request/phone | here/phone;"
               tal:attributes="class python:error and 'field error' or 'field'"
               tal:condition="not: account">

                   <label for="order_date" i18n:translate="label_phone">Contact Phone</label>

                   <div tal:content="error">Validation error output</div>

                   <input type="text" id="phone" name="phone" value="" size="35"
                           tal:attributes="value Phone; "/>

           </div>

           <div class="field"
                tal:define="error errors/orderdate|nothing;
                            Orderdate request/orderdate | here/orderdate;  
                            inputvalue Orderdate;
                            formname string:edit_form;
                            show_hm python: False;
                            inputname string:orderdate;"
                tal:attributes="class python:error and 'field error' or 'field'">

                   <label for="order_date" i18n:translate="label_effective_date">Quote Effective</label>

                   <span class="fieldRequired" title="Required"
                         i18n:attributes="orderdate"
                         i18n:translate="label_required">(Required)</span>

                   <div tal:content="error">Validation error output</div>

                   <div metal:use-macro="here/calendar_macros/macros/calendarDatePickerBox"></div>

            </div>

            <div class="field"
                 tal:define="error errors/reqdate|nothing;
                             Reqdate request/reqdate | here/reqdate;
                             inputvalue Reqdate;
                             formname string:edit_form;
                             show_hm python: False;
                             inputname string:reqdate;"
                  tal:attributes="class python:error and 'field error' or 'field'">

                   <label for="expires" i18n:translate="label_expires">Quote Expires</label>

                   <span class="fieldRequired" title="Required"
                         i18n:attributes="reqdate"
                         i18n:translate="label_required">(Required)</span>

                   <div tal:content="error">Validation error output</div>
                   <div metal:use-macro="here/calendar_macros/macros/calendarDatePickerBox"></div>
            </div>

        <div metal:use-macro="context/blorder_edit_form/macros/orderlines"/>

        <table width="100%" summary="">
           <tr>
              <td class="formControls" tal:condition="entries"> 
                  <input class="context"  type="submit"
                           name="form.button.Edit"
                         value=" Edit " i18n:attributes="value" />
              </td>
              <td align="right">
                  <tal:orderbooks tal:condition="orderbooks">
                       <select name="orderbook" tal:condition="not: account">
                           <option tal:repeat="id orderbooks"
                                   tal:content="id"/>
                       </select>
                       <input class="standalone"  type="submit" tal:condition="not: account"
                                name="form.button.Account"
                              value=" Create Account " i18n:attributes="value" />
                       <input class="standalone"  type="submit" tal:condition="not: order"
                                name="form.button.Order"
                              value=" Raise Order " i18n:attributes="value" />

                   </tal:orderbooks>
                </td>
            </tr>
        </table>

        <input type="hidden" name="form.submitted" value="1" />

      </form>

  </div>
 
</body>
</html>
