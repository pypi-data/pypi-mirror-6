<html tal:replace="structure context/manage_page_header"/>


    <div tal:replace="structure python:container.manage_form_title(context, context,
           form_title='<img src=%s/misc_/BastionLedger/blasset> %s' % (request['BASEPATH1'],
'Add Asset'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

     <form name="asset" id="asset" action="manage_addBLAsset" method="post">
          <table  cellspacing="0" cellpadding="4" border="0">
              <tr>
                  <td class="form-label">Title</td>
                  <td class="form-element">
                     <input type="text" name="title" size="30"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label" align="top">Description</td>
                  <td class="form-element">
                     <textarea name="description:text" rows="4" cols="50"></textarea>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Purchase Date</td>
                  <td class="form-element">
                     <input type="text" name="purchase_date:date" size="12" value=""
                            tal:attributes="value python: DateTime().strftime('%Y/%m/%d')"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Purchase Price</td>
                  <td class="form-element">
                     <input type="text" name="purchase_price:currency" size="12"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Asset Account</td>
                  <td class="form-element">
                     <select name="asset_account">
                         <option tal:repeat="acc context/asset_accounts"
				 tal:attributes="value acc/id"
                                 tal:content="acc/title"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Depreciation Method</td>
                  <td class="form-element">
                     <select name="depreciation_method">
                         <option tal:repeat="id context/depreciation_methods"
                                 tal:content="id"/>
                  </td>
              </tr>
              <tr>
                   <td class="form-label">Percentage Owned</td>
                   <td class="form-element">
                      <input type="text" name="percentage_owned:float" value="100.0"/>
              </tr>
              <tr>
                  <td class="form-label">Effective Life (years)</td>
                  <td class="form-element">
                      <input type="text" name="effective_life:float" align="right"
                             size="4" maxlength="4" value="5.0"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label" align="top">Percentage Rates</td>
                  <td class="form-element">
                      <textarea name="percentage_rates:lines:ignore_empty" rows="10" cols="5"></textarea>
                  </td>
              </tr>
              <tr>
                  <td class="form-element" colspan="2">
                     <input type="submit" value=" Add ">
       		  </td>
              </tr>
          </table>
     </form>
   
<html tal:replace="structure context/manage_page_footer"/>
