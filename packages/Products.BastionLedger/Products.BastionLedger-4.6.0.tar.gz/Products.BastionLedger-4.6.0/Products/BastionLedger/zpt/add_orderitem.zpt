<html tal:replace="structure context/manage_page_header"/>

    <div tal:replace="structure python:container.manage_form_title(context, context,
           form_title='<img src=%s/misc_/BastionLedger/orderitem> %s' % (request['BASEPATH1'],
'Add Order Item'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

      <form action="manage_addBLOrderItem">
         <table width="100%" cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Part Id</td>
                  <td class="form-element">
                      <select name="part">
                          <option tal:repeat="part container/availableParts" 
                                  value="" tal:attributes="value part/getId"
                                  tal:content="string:${part/getId} - ${part/title}"/>
                      </select>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Quantity</td>
                  <td class="form-element">
                      <input type="text" name="qty" size="5" value="1"/>
                  </td>
              </tr>
              <tr>
                  <td colspan="2">
                        <input type="submit" value=" Add ">
                 </td>
              </tr>
        </table>
      </form>
<html tal:replace="structure context/manage_page_footer"/>




