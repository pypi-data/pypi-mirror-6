<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
  <source>
    <!-- Define different entity types -->
    <entity id="e1" name="name">
      <rule expr="len($name) ge 8"></rule>
    </entity>
    <entity id="e2" name="fullname"/>
    <entity id="e3" name="password">
      <renderer type="password"/>
    </entity>
    <entity id="e4" name="rpassword">
      <renderer type="password"/>
      <rule expr="$password == $rpassword"></rule>
    </entity>
    <entity id="e5" name="anzahl_f2_m" label="" type="integer"/>
    <entity id="e6" name="anzahl_f2_w" label="" type="integer"/>
    <entity id="e7" name="anzahl_f2_g" label="" type="info" expr="$anzahl_f2_m + $anzahl_f2_w">
      <renderer type="info"/>
    </entity>
    <entity id="e8" name="texarea" label="Meine Textarea">
      <renderer type="textarea" rows="10"/>
    </entity>
    <entity id="e9">
      <renderer type="html">
      <div>
      <p>Das hier ist ein kleiner Test mit <strong>fetten</strong> Text</p>
      <img src="http://intevation.de/images/graphics/intevation_logo_120.png"/>
      </div>
      </renderer>
    </entity>
  </source>
  <form id="form">
    <snippet ref="s1"/>
  </form>
  <snippet id="s1">
    <row>
      <col><field ref="e1"/></col>
    </row>
    <row>
      <col><field ref="e2"/></col>
      <col>
        <row>
          <col><field ref="e3"/></col>
        </row>
        <row>
          <col><field ref="e4"/></col>
        </row>
      </col>
    </row>
    <row>
      <col>
        <table>
          <tr>
            <th>Criteria</th>
            <th>Male</th>
            <th>Female</th>
          </tr>
          <tr>
            <td width="70%">Number of humans in the world</td>
            <td><field ref="e5"/></td>
            <td><field ref="e6"/></td>
            <td><field ref="e7"/></td>
          </tr>
        </table>
      </col>
    </row>
    <row>
      <col><field ref="e8"/></col>
      <col><field ref="e9"/></col>
    </row>
  </snippet>
</configuration>
