<html tal:omit-tag=""
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva_news"
  tal:define="
    formatdate nocall:context/service_news/format_date;">

  <h2 class="heading" tal:content="context/get_title"
    tal:condition="not:context/suppress_title | context/suppress_title | nothing" />
  <div class="searchbox">
    <form tal:attributes="action view/search_url"
      method="get">
      <input type="text" name="query" />
      <input class="button"
        type="submit"
        value="Search"
        title="Do a full text search: alt-s"
        accesskey="s"
        i18n:attributes="title;value"
      />
    </form>
  </div>

  <div class="newsitem" tal:repeat="r view/results">
    <div tal:replace="structure r/@@search_result" />
  </div>

  <p class="p newsmessage"
    tal:condition="python: len(view.results) < 1"
    i18n:translate="">
    There are no articles available.
  </p>

  <p class="p archivelink">
    <a tal:attributes="href view/archive_url"
     i18n:translate="">
     view archive
   </a>
  </p>
</html>
