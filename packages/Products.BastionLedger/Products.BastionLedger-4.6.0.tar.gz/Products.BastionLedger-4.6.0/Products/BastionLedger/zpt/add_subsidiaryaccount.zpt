<html tal:replace="structure context/manage_page_header"/>

    <div tal:replace="structure python:container.manage_form_title(context, context,
           form_title='<img src=%s/misc_/BastionLedger/blaccount> %s' % (request['BASEPATH1'],
'Add Subsidiary Account'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

     <form action="manage_addBLSubsidiaryAccount" method="post">
          <table width="100%" cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Title</td>
                  <td class="form-element">
                      <input type="text" name="title" size="35">
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Description</td>
                  <td class="form-element">
                      <input type="text" name="description" size="35">
                  </td>
              </tr>
              <!--tr>
                  <td class="form-label">Type</td>
                  <td class="form-element" tal:define="hint context/accountType">
                       <select name="type">
                            <option tal:repeat = "type container/Types"
                                    tal:attributes="selected python: type == hint" 
                                    tal:content="type"/>
                      </select>
                  </td>
              </tr-->
              <tr>
                  <td class="form-label">Base Currency</td>
                  <td class="form-element">
                       <select name="currency">
                            <option tal:repeat = "curr container/Ledger/currencies" tal:content="curr"/>
                      </select>
                  </td>
              </tr>
               <tr>
                  <td class="form-optional">Account Number</td>
                  <td class="form-element">
                      <input type="text" name="accno" size="8">
                  </td>
              </tr>
             <tr>
                  <td class="form-optional">GIFI Number</td>
                  <td class="form-element">
                      <select name="gifi_id">
                            <option value="">None</option>
                      </select>
                  </td>
              </tr>
              <tr>
                  <td class="form-element">
                     <input type="submit" value=" Add ">
       		  </td>
              </tr>
          </table>
     </form>
   
<html tal:replace="structure context/manage_page_footer"/>
