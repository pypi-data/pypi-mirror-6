<html tal:replace="structure container/manage_page_header"
       tal:define="global slots context/getTimesheetSlots;
                   global date request/date | context/getTimesheetDay"/>

    <div tal:replace="structure python:context.manage_form_title(
           form_title='<img src=%s/misc_/BastionLedger/bltimesheet> %s' % (request['BASEPATH1'], 
'Add Employee Timesheet'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

     <br/>

  <table border="0" cellpadding="2" cellspacing="2" width="100%">
   <tr>
    <td>
     <img src="" tal:attributes="src python: '%s/misc_/BastionLedger/employee' % request['BASEPATH1']"/> 
     <span class="form-label" tal:replace="python: container.getEmployee().title"/><br/>
     <h2> <span tal:replace="python: 'Week ended %s' % date.strftime('%d %B %Y')"/> </h2>
     <form action="manage_addBLTimesheet" method="post">
          <input type="hidden" name="date:date"
                 value="" tal:attributes="value date">
        <table cellpadding="2" cellspacing="0" border="0">
       <tr class="list-header">
          <td>&nbsp;</td>
          <td tal:repeat="slot slots"
              class="form-label" tal:content="slot/getId"/>
       </tr>
       <tr tal:repeat="day context/select_day_of_week">
          <input type="hidden" name="entries.day:records:date"
                 value="" tal:attributes="value python:date - repeat['day'].index">
          <td class="form-label" tal:content="day"/>
          <td tal:repeat="slot slots">
             <input type="text" name="" size="5" maxlength="5" value=""
                    tal:attributes="name python:'entries.%s:float:records' % slot.getId();
                                    value python: slot.defaults[repeat['day'].index]"/>
          </td>
       </tr>
       <tr>
           <td colspan="2" class="form-element"><input type="submit" value= " Submit "/></td>
       </tr>
        </table>
     </form>
    </td>
    <td valign="top" align="right" tal:content="structure context/display_calendar"/>
  </tr>
 </table>

<html tal:replace="structure container/manage_page_footer"/>
