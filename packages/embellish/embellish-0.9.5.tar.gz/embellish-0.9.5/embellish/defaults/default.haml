%head
  :css
    html { }
    body {
      background-color: white;
      width: 35em;
      margin: 0 auto;
      padding: 50px 20px 0px 20px;
      font-family: 'Helvetica Neue', sans-serif;
      letter-spacing: 0.1em;
      font-size: 14px;
      color: #000;
      line-height: 1.5em; }
    h1, h2, h3, h4 {
      font-family: "Helvetica Neue";
      text-transform: uppercase;
      color: #666;
      letter-spacing: 0.3em;
      font-weight: 500;
      line-height: 1em; 
      margin-bottom: 0;
      margin-top: 2em }
    h1 {
      font-size: 30px; 
      margin-top: 3em;
      margin-bottom: 1em }
    h2 {
      font-size: 12px;
      margin-top: 5em;
      margin-bottom: 3em;
    }
    .timestamp {
      margin-top: 6em;
      text-align: right;
      color: #999;
      border-top: 1px solid #CCC;
      font-size: 10px }
    .timestamp, .timestamp a:link, .timestamp a:visited {
      color: #888; }
    .timestamp a {
      text-decoration: underline; }
    blockquote {
      border-left: 5px solid #DDD;
      margin-left: 0;
      padding-left: 2em;
      color: #888;
    }
    code {
      padding: 0px 2px; }
    pre {
      margin: 0;
    }
    .codehilite {
      overflow: auto;
      padding: 7px 20px;
      }
    code, .codehilite {
      background-color: #F9F9FF;
      border: 2px solid #EEF;
      color: #777;
      font-size: 12px; 
      line-height: 1.5em; }

    @media screen and (max-width: 650px) {
      body {
        width: auto;
        margin: 0; } }

    @media screen and (max-width: 550px) {
      body {
        padding-left: 20px;
        padding-right: 20px } }

%body
  - if page.title:
    %h1 {{ page.title }}

  {{ page.content }}

  .timestamp
    generated by 
    %a{href:'http://github.com/boscoh/embellish'} embellish
    - if 'category' in page and page.category:
      in category: {{ page.category }},
    on {{ page.date.strftime("%d %b %Y") }}


  