{% block basic %}
<input
    type="{{ field_type|default:"text" }}"
    name="{{ html_name }}"
    id="{{ id }}"
    value="{{ value|default:"" }}"
    class="{{ classes }}"
    placeholder="{{ label }}"
    initial="{{ initial|default:"" }}"
    {{ required|yesno:"required," }} />
{% if help_text %}
<span class="help-block">{{ help_text }}</span>
{% endif %}
{% endblock %}

{% block textarea %}
<textarea rows="3"
          name="{{ html_name }}"
          id="{{ id }}"
          placeholder="An optional note">
</textarea>
{% endblock %}

{% block inline %}
<input type="{{ field_type|default:"text" }}"
       name="{{ html_name }}"
       id="{{ id }}"
       value="{{ value|default:"" }}"
       placeholder="{{ placeholder|default:"" }}"
       class="{{ classes }}"
       {{ required|yesno:"required," }} />
{% endblock %}

{% block select %}
<select name="{{ html_name }}" id="{{ id }}" class="{{ classes }}" {% if errors %}class="error"{% endif %}>
  <option value="" selected="selected">{{ year|default:"Month" }}</option>
  {% for option_value, option_label in choices %}
    <option value="{{ option_value }}">{{ option_label }}</option>
  {% endfor %}
</select>
{% endblock %}

{% block actions %}
<button type="submit" class="btn">{{ submit }}</button>
{% endblock %}
