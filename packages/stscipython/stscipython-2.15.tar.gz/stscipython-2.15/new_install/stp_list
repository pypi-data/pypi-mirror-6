#!/bin/sh
#
if [ "$1" != "" ]
then
	branch=$1
	export branch
fi

if [ "$branch" = "" ]
then
	branch=trunk
fi
# branch=branches/xxx

astrolib=https://aeon.stsci.edu/ssb/svn/astrolib/
stsci_python=https://svn.stsci.edu/svn/ssb/stsci_python
pyfits=https://aeon.stsci.edu/ssb/svn/pyfits
pyraf=https://aeon.stsci.edu/ssb/svn/pyraf
crds=https://svn6.assembla.com/svn/crds

## list packages here in any order you like
## column 1 is the package name (that it will be installed as)
## column 2 is 'svn' for packages stored in subversion
## column 3 is the url to check out, based on $branch and repository
##	    prefixes defined above
sed -e '/^[ 	]*#/d' -e '/^$/d' << ARF

acstools        	    svn		$stsci_python/acstools/$branch
astrolib.coords     svn		$astrolib/$branch/astrolib.coords
calcos		    svn		$stsci_python/calcos/$branch
costools	            svn		$stsci_python/costools/$branch
crds            svn             $crds/$branch
d2to1		    svn		$stsci_python/d2to1/$branch
drizzlepac	    svn		$stsci_python/drizzlepac/$branch
fitsblender	    svn		$stsci_python/fitsblender/$branch
multidrizzle	    svn		$stsci_python/multidrizzle/$branch
nictools	            svn		$stsci_python/nictools/$branch
opuscoords	    svn		$stsci_python/opuscoords/$branch
pydrizzle	    svn		$stsci_python/pydrizzle/$branch
pyfits		    svn		$pyfits/$branch
pyraf		    svn		$pyraf/$branch
pysynphot	    svn		$astrolib/$branch/pysynphot
pywcs		    svn		$astrolib/$branch/pywcs
reftools	            svn		$stsci_python/reftools/$branch
stsci.samplepackage svn		$stsci_python/stsci.samplepackage/$branch
stistools	    svn		$stsci_python/stistools/$branch
stsci.convolve	    svn		$stsci_python/stsci.convolve/$branch
stsci.distutils	    svn		$stsci_python/stsci.distutils/$branch
stsci.image	    svn		$stsci_python/stsci.image/$branch
stsci.imagemanip    svn		$stsci_python/stsci.imagemanip/$branch
stsci.imagestats    svn		$stsci_python/stsci.imagestats/$branch
stsci.ndimage	    svn		$stsci_python/stsci.ndimage/$branch
stsci.numdisplay    svn		$stsci_python/stsci.numdisplay/$branch
stsci.sphinxext	    svn		$astrolib/$branch/stsci_sphinxext
stsci.stimage	    svn		$stsci_python/stsci.stimage/$branch
stsci.tools	    svn		$stsci_python/stsci.tools/$branch
stwcs		    svn		$stsci_python/stwcs/$branch
wfc3tools           svn         $stsci_python/wfc3tools/$branch
wfpc2tools	    svn		$stsci_python/wfpc2tools/$branch
pyregion        svn     $stsci_python/pyregion/$branch

ARF
