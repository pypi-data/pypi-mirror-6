#!/usr/bin/python
#-*- encoding: UTF-8 -*-

from pysrttranslator import pysrttranslator
import logging

def main(parameters):
    '''
    @parameters: NameSpace with the parameters of the software
    '''
    pysrttranslator.translate_srt_file(parameters.i, 
            parameters.o and parameters.o or parameters.i.replace('.srt', '.%s.srt' % parameters.ol), parameters.il, parameters.ol)

if __name__ == '__main__':

    _logger = logging.getLogger('- Translater -')
    #TODO: Here we should write the algorithm to read the config file too
    pysrttranslator.args = pysrttranslator.return_parser().parse_args() 
    logging.basicConfig(format='%(levelname)s:%(name)s:%(asctime)s %(message)s',
        filename=pysrttranslator.args.log_file, level=logging.DEBUG)
    main(pysrttranslator.args)
