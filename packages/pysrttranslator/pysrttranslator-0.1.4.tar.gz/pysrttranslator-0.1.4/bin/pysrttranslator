#!/usr/bin/python
#-*- encoding: UTF-8 -*-

from pysrttranslator import pysrttranslator
import logging

if __name__ == '__main__':
    _logger = logging.getLogger('- Translater -')
    o = pysrttranslator.get_options()
    logging.basicConfig(format='%(levelname)s:%(name)s:%(asctime)s %(message)s',
        filename=o['log_file'], level=logging.DEBUG)
    pysrttranslator.translate_srt_file(o['input_file'], o['output_file'], o['input_lang'],
            o['output_lang'], o['google_api_key'])
