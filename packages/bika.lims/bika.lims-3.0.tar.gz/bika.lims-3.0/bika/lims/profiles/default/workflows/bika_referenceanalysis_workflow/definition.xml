<?xml version="1.0"?>
<dc-workflow xmlns:i18n="http://xml.zope.org/namespaces/i18n"
             i18n:domain="plone"
             workflow_id="bika_referenceanalysis_workflow"
             title="Bika Reference Analysis Workflow"
             state_variable="review_state"
             initial_state="unassigned">

 <permission>BIKA: View Results</permission>
 <permission>BIKA: Edit Results</permission>

 <state state_id="unassigned" title="Unassigned" i18n:attributes="title">
  <exit-transition transition_id="assign"/>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Edit Results" acquired="False">
  </permission-map>
 </state>

 <state state_id="assigned" title="Assigned" i18n:attributes="title">
  <exit-transition transition_id="submit"/>
  <exit-transition transition_id="unassign"/>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Edit Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
  </permission-map>
 </state>

 <state state_id="attachment_due" title="Attachment Outstanding" i18n:attributes="title">
  <exit-transition transition_id="attach"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="unassign"/>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Edit Results" acquired="False">
  </permission-map>
 </state>

 <state state_id="to_be_verified" title="To be verified" i18n:attributes="title">
  <exit-transition transition_id="verify"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="unassign"/>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Edit Results" acquired="False">
  </permission-map>
 </state>

 <state state_id="verified" title="Verified" i18n:attributes="title">
  <exit-transition transition_id="unassign"/>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Edit Results" acquired="False">
  </permission-map>
 </state>

 <transition transition_id="retract"
             title="Retract"
             new_state="assigned"
			 trigger="USER"
             before_script=""
			 after_script=""
             i18n:attributes="title retract_transition_title">
  <description i18n:translate=""></description>
  <action url="workflow_action?workflow_action=retract"
          category="workflow"
		  icon=""
		  i18n:translate="retract_transition_title">Retract</action>
  <guard>
   <guard-permission>BIKA: Retract</guard-permission>
  </guard>
 </transition>

 <transition transition_id="submit"
             title="Submit for verification"
             new_state="attachment_due"
			 trigger="USER"
             before_script=""
			 after_script=""
             i18n:attributes="title submit_transition_title">
  <description i18n:translate=""></description>
  <action url="workflow_action?workflow_action=submit"
          category="workflow"
		  icon=""
		  i18n:translate="submit_transition_title">Submit for verification</action>
  <guard>
  </guard>
 </transition>

 <transition transition_id="attach"
			 title="Add attachment"
			 new_state="to_be_verified"
			 trigger="USER"
			 before_script=""
			 after_script=""
             i18n:attributes="title attach_transition_title">
  <description i18n:translate=""></description>
  <action url="workflow_action?workflow_action=submit"
          category="workflow"
		  icon=""
		  i18n:translate="attach_transition_title">Add attachment</action>
  <guard>
   <guard-expression>python:here.guard_attach_transition()</guard-expression>
  </guard>
 </transition>

 <transition transition_id="verify"
             title="Verify"
             new_state="verified"
			 trigger="USER"
             before_script=""
			 after_script=""
             i18n:attributes="title verify_transition_title">
  <description i18n:translate=""></description>
  <action url="workflow_action?workflow_action=verify"
          category="workflow"
		  icon=""
		  i18n:translate="verify_transition_title">Verify</action>
  <guard>
   <guard-permission>BIKA: Verify</guard-permission>
   <guard-expression>python:here.guard_verify_transition()</guard-expression>
  </guard>
 </transition>

 <transition transition_id="reject"
             title="Reject"
             new_state=""
			 trigger="USER"
             before_script=""
			 after_script=""
			 i18n:attributes="title reject_transition_title">
  <description i18n:translate=""></description>
  <action url="workflow_action?workflow_action=reject"
          category="workflow"
		  icon=""
		  i18n:translate="reject_transition_title">Reject</action>
  <guard>
   <guard-permission>BIKA: Reject Worksheet</guard-permission>
  </guard>
 </transition>

 <transition transition_id="assign"
             title="Assign"
             new_state="assigned"
			 trigger="USER"
             before_script=""
			 after_script=""
             i18n:attributes="title assign_transition_title">
  <description i18n:translate=""></description>
  <action url="workflow_action?workflow_action=assign"
          category="workflow"
		  icon=""
		  i18n:translate="assign_transition_title">Assign</action>
  <guard>
  </guard>
 </transition>

 <transition transition_id="unassign"
             title="Remove"
             new_state="unassigned"
			 trigger="USER"
             before_script=""
			 after_script=""
             i18n:attributes="title unassign_transition_title">
  <description i18n:translate=""></description>
  <action url="workflow_action?workflow_action=unassign"
          category="workflow"
		  icon=""
		  i18n:translate="unassign_transition_title">Remove</action>
  <guard>
  </guard>
 </transition>

 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description i18n:translate="">The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description i18n:translate="">The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description i18n:translate="">Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description i18n:translate="">Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description i18n:translate="">Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>

</dc-workflow>
