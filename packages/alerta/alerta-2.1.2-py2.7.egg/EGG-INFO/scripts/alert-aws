#!/Users/nsatterl/.virtualenvs/alerta/bin/python
########################################
#
# alert-aws - Amazon Web Service Alerter
#
########################################

import os
import sys

possible_topdir = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                                os.pardir,
                                                os.pardir))
if os.path.exists(os.path.join(possible_topdir, 'alerta', '__init__.py')):
    sys.path.insert(0, possible_topdir)

from alerta.common import config
from alerta.common import log as logging
from alerta.aws.daemon import AwsDaemon, Version

LOG = logging.getLogger('alerta.aws')
CONF = config.CONF

if __name__ == '__main__':
    config.parse_args(version=Version)
    logging.setup('alerta')
    aws = AwsDaemon('alert-aws')
    aws.start()
