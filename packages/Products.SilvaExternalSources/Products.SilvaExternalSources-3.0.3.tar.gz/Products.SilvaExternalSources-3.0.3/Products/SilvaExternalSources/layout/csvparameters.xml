<?xml version="1.0" encoding="iso-8859-1"?>

<form>
  <title>CSV Paramters</title>
  <name>csvparameters</name>
  <action></action>
  <enctype></enctype>
  <method>POST</method>

  <groups>
    <group>
      <title>Default</title>
      <fields>

      <field><id>csvtableclass</id> <type>ListField</type>
        <values>
          <alternate_name></alternate_name>
          <css_class>store</css_class>
          <default></default>
          <description>Choose a style of the table which fits your needs.</description>
          <enabled type="int">1</enabled>
          <external_validator></external_validator>
          <extra></extra>
          <extra_item></extra_item>
          <first_item type="int">0</first_item>
          <hidden type="int">0</hidden>
          <items type="list">[('Simple table (no formatting)', 'simple'), ('Plain table (bold heading, no borders)', 'plain'), ('List table (bold underlined heading, borderless rows)', 'list'), ('Grid table (bold bordered heading, bordered rows)', 'grid'), ('Data grid table (bold borderless heading, bordered rows)', 'datagrid')]</items>
          <required type="int">0</required>
          <size type="int">1</size>
          <title>table style</title>
          <unicode type="int">0</unicode>
          <whitespace_preserve type="int">0</whitespace_preserve>
        </values>
        <tales>
        </tales>
        <messages>
          <message name="external_validator_failed">The input failed the external validator.</message>
          <message name="required_not_found">Input is required but no input given.</message>
          <message name="unknown_selection">You selected an item that was not in the list.</message>
        </messages>
      </field>
      <field><id>csvbatchsize</id> <type>IntegerField</type>
        <values>
          <alternate_name></alternate_name>
          <css_class></css_class>
          <default></default>
          <description>Number of rows to show. If empty, the default value is set to 20.</description>
          <display_maxwidth type="int">2</display_maxwidth>
          <display_width type="int">3</display_width>
          <end type="int">100</end>
          <external_validator></external_validator>
          <extra></extra>
          <hidden type="int">0</hidden>
          <required type="int">0</required>
          <start type="int">1</start>
          <title>batch size</title>
          <whitespace_preserve type="int">0</whitespace_preserve>
        </values>
        <tales>
        </tales>
        <messages>
          <message name="external_validator_failed">The input failed the external validator.</message>
          <message name="required_not_found">Input is required but no input given.</message>
          <message name="not_integer">You did not enter an integer.</message>
          <message name="integer_out_of_range">The integer you entered was out of range.</message>
        </messages>
      </field>
      </fields>
    </group>
  </groups>
</form>
