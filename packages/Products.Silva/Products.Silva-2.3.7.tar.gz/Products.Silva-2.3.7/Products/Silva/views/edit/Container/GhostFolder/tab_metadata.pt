<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
  lang="en"
  xml:lang="en"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva"
  tal:define="
    global vein string:metadata;
">

<!-- tab_metadata for Ghost objects -->
<metal:block use-macro="here/macro_index/macros/master">

<metal:block metal:fill-slot="middleground">
  <tal:buttons tal:replace="structure model/@@tab_metadata_extra" />
</metal:block>

<metal:block fill-slot="main">

  <table class="columns columns3">
    <tbody>
      <tr>
        <tal:block replace="nothing">
          _____________________ sidebar _____________________
        </tal:block>
        <td class="left">
          <metal:block use-macro="here/macro_vein_navigation/macros/vein">
            <metal:fill-slot fill-slot="sidebar">
              <tal:block replace="structure python: here.service_sidebar.render(model, 'tab_metadata', vein)" />
            </metal:fill-slot>
          </metal:block>
        </td>

        <tal:block replace="nothing">
          _____________________ main _____________________
        </tal:block>
        <td class="main">
          <tal:block
            define="content model"
            condition="content">
            <metal:block use-macro="here/macro_view_metadata/macros/metadata">
              <h2 metal:fill-slot="table_title" i18n:translate="">
                <img tal:replace="structure icon" i18n:name="icon" />
                metadata
                <span tal:condition="not: model/implements_container" i18n:name="for_public_version_of">
                  <tal:block i18n:translate="">
                  for public version of
                  &#xab;<span tal:replace="string:${title}" i18n:name="title" />&#xbb;</tal:block>
                </span>
              </h2>
            </metal:block>
          </tal:block>

        </td>
        <td class="right"
            tal:content="structure provider:smiportletmanager">
        </td>
      </tr>
    </tbody>
  </table>

</metal:block>
</metal:block>
</html>
