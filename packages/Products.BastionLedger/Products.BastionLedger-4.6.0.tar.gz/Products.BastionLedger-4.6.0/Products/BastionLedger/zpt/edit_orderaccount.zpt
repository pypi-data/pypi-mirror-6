<html tal:replace="structure context/manage_page_header"/>
     <span tal:replace="structure context/manage_tabs"/>

      <form action="" tal:attributes="action request/URL1" method="post">
         <table cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Title</td>
                  <td class="form-element">
                      <input type="text" name="title" size="35" value=""
                            tal:attributes="value context/title | nothing">
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Description</td>
                  <td class="form-element">
                      <input type="text" name="description" size="35" value=""
                            tal:attributes="value context/Description | nothing">
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Currency</td>
                  <td class="form-element" tal:content=" context/base_currency">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" valign="top">Tags</td>
                  <td class="form-element">
                      <textarea name="tags:lines" rows="4" cols="40" 
                                tal:content="python: '\n'.join(context.tags)"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" valign="top">Address</td>
                  <td class="form-element">
                      <textarea name="address:text" rows="4" cols="40" tal:content="context/address"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Contact Person</td>
                  <td class="form-element">
                      <input type="text" name="contact" size="35" value=""
                            tal:attributes="value context/contact | nothing">
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" tal:content="python:'Phone'"/>
                  <td class="form-element">
                      <input type="text" name="phone" size="35" value=""
                            tal:attributes="value context/phone | nothing">
                  </td>
              </tr>
               <tr>
                  <td class="form-optional" tal:content="python:'Fax'"/>
                  <td class="form-element">
                      <input type="text" name="fax" size="35" value=""
                            tal:attributes="value context/fax | nothing">
                  </td>
              </tr>
               <tr>
                  <td class="form-label" tal:content="python:'Email'"/>
                  <td class="form-element">
                      <input type="text" name="email" size="35" value=""
                            tal:attributes="value context/email | nothing">
                  </td>
              </tr>
               <tr>
                  <td class="form-label" tal:content="python:'Discount'"/>
                  <td class="form-element">
                      <input type="text" name="discount" size="5" value=""
                            tal:attributes="value context/discount | nothing">
                  </td>
              </tr>
               <tr>
                  <td class="form-label" tal:content="python:'Tax Exempt'"/>
                  <td class="form-element">
                      <input type="checkbox" name="taxincluded"  value="1" checked
                            tal:condition="context/taxincluded | nothing">
                      <input type="checkbox" name="taxincluded"  value="1"
                            tal:condition="not: context/taxincluded | nothing">
                  </td>
              </tr>
               <tr>
                  <td class="form-label" tal:content="python:'Credit Limit'"/>
                  <td class="form-element">
                      <input type="text" name="creditlimit:currency" size="12" value=""
                            tal:attributes="value python:context.creditlimit">
                  </td>
              </tr>
               <tr>
                  <td class="form-optional" tal:content="python:'Terms'"/>
                  <td class="form-element">
                      <input type="text" name="terms" size="8" value=""
                             tal:attributes="value context/terms | nothing">
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" valign="top"
                      tal:content="python:'Notes'"/>
                  <td class="form-element">
                      <textarea name="notes:lines" rows="4" cols="40"><span tal:omit-tag=""
                                  tal:repeat="line context/notes | nothing"
                                  tal:content="python: '%s\n' % line"/></textarea>
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" tal:content="python:'Ship to Name'"/>
                  <td class="form-element">
                      <input type="text" name="shiptoname" size="35" value=""
                            tal:attributes="value context/shiptoname | nothing">
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" valign="top"
                      tal:content="python:'Ship To Address'"/>
                  <td class="form-element">
                      <textarea name="shiptoaddress:text" rows="4" cols="40"
                                tal:content="context/shiptoaddress"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" tal:content="python:'Ship To Contact'"/>
                  <td class="form-element">
                      <input type="text" name="shiptocontact" size="35" value=""
                            tal:attributes="value context/shiptocontact | nothing">
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" tal:content="python:'Ship To Phone'"/>
                  <td class="form-element">
                      <input type="text" name="shiptophone" size="35" value=""
                            tal:attributes="value context/shiptophone | nothing">
                  </td>
              </tr>
               <tr>
                  <td class="form-optional" tal:content="python:'Ship To Fax'"/>
                  <td class="form-element">
                      <input type="text" name="shiptofax" size="35" value=""
                            tal:attributes="value context/shiptofax | nothing">
                  </td>
              </tr>
               <tr>
                  <td class="form-optional" tal:content="python:'Ship To Email'"/>
                  <td class="form-element">
                      <input type="text" name="shiptoemail" size="35" value=""
                            tal:attributes="value context/shiptoemail | nothing">
                  </td>
              </tr>
              <tr>
                 <td colspan=2>
                   <input type="submit" name="manage_oaEdit:method" value=" Edit ">
                 </td>
              </tr>
        </table>
      </form>
<html tal:replace="structure context/manage_page_footer"/>




