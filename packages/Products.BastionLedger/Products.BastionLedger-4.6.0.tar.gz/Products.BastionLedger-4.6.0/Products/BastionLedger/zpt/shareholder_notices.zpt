<html tal:replace="structure context/manage_page_header"/>

    <span tal:replace="structure context/manage_tabs"/>

    <br/>

    <span tal:omit-tag="" tal:define="notices python: list(context.objectValues('BLDividendAdvice'));
                                      foo python: notices.reverse();">

   <form action="" tal:attributes="action request/URL1">
    <table border="0" cellpadding="2" cellspacing="0" width="100%">
        <tr class="list-header" tal:condition="notices">
               <td width="16"  class="list-item"></td>
               <td width="5%"  class="list-item">Type</td>
               <td width="60%" class="list-item">Details</td>
               <td width="10%" align="right" class="list-item">Amount</td>
               <td class="list-item">&nbsp;</td>
               <td width="20%" class="list-item">Posted</td>
        </tr>
        <tr tal:repeat="item notices">
               <td class="list-item">
                  <input type="checkbox" name="ids:list" value="" tal:attributes="value item/getId"/>
               </td>
               <td class="list-item"><img src="" tal:attributes="src item/icon"/></td>
               <td class="list-item">
                   <a href="" tal:attributes="href string:${item/getId}/manage_workspace"  
                              tal:content="item/title"/>
               </td>
               <td class="list-item" align="right" tal:content="item/amount"/>
               <td class="list-item">&nbsp;</td>
               <td class="list-item"
                   tal:content="python: item.effective().strftime('%Y/%m/%d')"/>

        </tr>
        <tr>
               <td colspan="6">
                   <input type="text" name="email" value="" tal:attributes="value context/email"/>
                   <input type="submit" value=" Email " name="manage_emailAdvices:method"/>
               </td>
        </tr>
    </table>
  </form>
    <div tal:condition="not: notices" class="system-msg">There are no dividend advices</div>
    </span>

<html tal:replace="structure context/manage_page_footer"/>





