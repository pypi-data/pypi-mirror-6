<div class="newsitem"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="silva_news">
  <h2 class="heading newsitemheading"
      tal:content="structure content/get_title" />
  <p class="eventactions">
    <a i18n:attributes="title"
       tal:attributes="href view/event_url"
       title="Add this event to your calendar">
      <img tal:attributes="src view/event_img_url" />
      <tal:msg i18n:translate="">Add this event to my calendar</tal:msg>
    </a>
  </p>
  <div class="newsiteminfo">
    <p class="publicationdate" tal:condition="view/article_date">
      <span class="label" i18n:translate="">Publication date: </span>
      <span class="value" tal:content="view/article_date" />
    </p>
    <div class="occurrence" tal:repeat="occurrence view/occurrences">
      <div class="location" tal:condition="occurrence/location">
        <span class="label" i18n:translate="">Location: </span>
        <span class="value" tal:content="occurrence/location" />
      </div>
      <div class="startdate" tal:condition="occurrence/start">
        <span class="label" i18n:translate="">Start: </span>
        <span class="value" tal:content="occurrence/start" />
      </div>
      <div class="enddate" tal:condition="occurrence/end">
        <span class="label" i18n:translate="">End: </span>
        <span class="value" tal:content="occurrence/end" />
      </div>
    </div>
    <p class="externalurl"
         tal:define="external_url content/get_external_url"
         tal:condition="external_url">
      <span class="label" i18n:translate="">Url: </span>
      <a href="#" class="value"
         tal:attributes="href external_url"
         tal:content="external_url">URL</a>
    </p>
  </div>
  <div class="newsitemcontent" tal:content="structure view/article" />
</div>
