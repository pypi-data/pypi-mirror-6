#!/usr/bin/env python
import argparse

if __name__ == "__main__":
    from colorscheme import main

    #generate argument list
    parser = argparse.ArgumentParser(description='A basic terminal app that displays the terminal\'s color palette in a fun way.')
    parser.add_argument('-a', '--art', type=str, default='invaders', choices=['invaders','abcdef','pacman'], help='art to draw')
    args = parser.parse_args()

    main(args.art)
