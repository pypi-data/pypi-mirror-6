<html tal:replace="structure context/manage_page_header"/>
     <span tal:replace="structure context/manage_tabs"/>

     <p class="form-help">Rolling Ledgers is the process of archiving all entries to a certain date and posting
        new opening balances.</p>

     <table cellpadding="2" cellspacing="0" border="0">
         <tr class="list-header">
            <td/>
            <td class="list-item">Ledger</td>
            <td class="list-item" align="center">Accounts</td>
            <td class="list-item" align="center">Transactions</td>
            <td class="list-item">Last Rollover</td>
            <td class="list-item">Last Active</td>
         </tr>
         <tr tal:repeat="info context/getLedgerInfo"
             class="" tal:attributes="class python: repeat['info'].odd() and 'row-normal' or 'row-hilite'">
            <td class="list-item">
               <img src="" tal:attributes="src string:${request/BASEPATH1}/${info/icon}"/>
            </td>
            <td class="list-item">
                <a href="" 
                   tal:attributes="href string:${info/absolute_url}/manage_workspace" 
                   tal:content="info/id"/>
            </td>
            <td class="list-item" align="center" tal:content="info/num_accounts"/>
            <td class="list-item" align="center" tal:content="info/num_transactions"/>
            <td class="list-item" tal:content="info/last_rollover"/>
            <td class="list-item" tal:content="info/last_active"/>
         </tr>
     </table>

     <form action="" method="post" tal:attributes="action request/URL1">
         <table>
            <tr>
                <td class="form-label">Effective Date</td>
                <td class="form-element">
                    <input type="text" name="effective:date" size="8" value=""
                           tal:attributes="value python: DateTime().strftime('%Y/%m/%d')"/>
                </td>
                <td>&nbsp</td>
                <td class="form-element">
                   <input type="checkbox" name="just_reports:boolean" value="1"/>
                </td>
                <td class="form-label">Reports Only</td>
                <td>
                    <input type="submit" name="manage_do_roll:method" value=" Roll "/>
                </td>
            </tr>
         </table>
     </form>

<html tal:replace="structure context/manage_page_footer"/>




