<vc xmlns:bind="bind">
    <body>
        <pad id="tapegroups">
            <label text="Tape groups" style="bold" />

            <bind:collection bind="groups" id="groups">
                <vc>
                    <hc>
                        <button bind="__add" icon="plus" text="Add" />
                        <button id="save" text="Save" />
                    </hc>
                    <dt bind="__items" />
                    <bind:template>
                        <collapserow>
                            <box>
                                <right>
                                    <button bind="__delete" icon="remove" style="icon" warning="Confirm deletion" />
                                </right>
                                <label bind="name" />
                            </box>
                            
                            <pad>
                                <vc>
                                    <formline text="Name">
                                        <textbox bind="name" />
                                    </formline>
                                    <formline text="Tapes">
                                        <bind:collection bind="tapes" id="tapes">
                                            <dt bind="__items" width="500" />
                                            <bind:template>
                                                <collapserow>
                                                    <box>
                                                        <right>
                                                            <button bind="__delete" icon="remove" style="icon" warning="Confirm deletion" />
                                                        </right>
                                                        <hc>
                                                            <label bind="name" />
                                                            <label bind="extras" />
                                                        </hc>
                                                    </box>
                                                    
                                                    <pad>
                                                        <formline text="Name">
                                                            <textbox bind="name" />
                                                        </formline>
                                                        <formline text="Capacity">
                                                            <label bind="extras" />
                                                        </formline>
                                                        <formline text="Move">
                                                            <hc>
                                                                <dropdown id="destination" />
                                                                <button id="move" icon="arrow-right" text="Move" />
                                                            </hc>
                                                        </formline>
                                                    </pad>
                                                </collapserow>
                                            </bind:template>

                                            <button bind="__add" icon="plus" text="Add" />
                                        </bind:collection>
                                    </formline>
                                </vc>
                            </pad>
                        </collapserow>
                    </bind:template>
                </vc>
            </bind:collection>
        </pad>
    </body>
</vc>
        