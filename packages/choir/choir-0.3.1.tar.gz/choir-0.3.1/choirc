#!/usr/bin/env python
import argparse
import choir

def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('--base', type=str, default=choir.BASE)
    parser.add_argument('--message', nargs="?", type=str, default=None)
    parser.add_argument('--sprinkle', nargs="?", type=int, default=0)
    parser.add_argument('key', type=str)
    parser.add_argument('sound', type=str)
    parser.add_argument('label', nargs="?", type=str, default="test")
    args = parser.parse_args()
    c = choir.Choir(args.key, base=args.base)
    c._send(args.sound, args.label, args.message, args.sprinkle)

if __name__ == "__main__":
    main()
