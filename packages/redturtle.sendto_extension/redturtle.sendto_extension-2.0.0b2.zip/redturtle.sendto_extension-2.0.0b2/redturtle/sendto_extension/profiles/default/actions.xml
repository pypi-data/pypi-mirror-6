<?xml version="1.0"?>
<object name="portal_actions"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="document_actions" meta_type="CMF Action Category">
  <object name="sendto" meta_type="CMF Action" i18n:domain="redturtle.sendto_extension">
   <property name="title" i18n:translate="">Send link</property>
   <property name="description" i18n:translate="">Send link to this page to somebody</property>
   <property name="url_expr">string:$object_url/@@sendto</property>
   <property name="icon_expr">string:$portal_url/++resource++redturtle.sendto_extension.resources/mail_icon.png</property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="Allow sendto"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>