{
    "job" : {
        "_id": {"store": "yes"},
        "_index": {"enabled": true},
        "_type": {"store": "yes"},
        "_all" : {
            "enabled" : true,
            "store" : "yes"
        },
        "properties" : {
            "__name__": { 
                "type": "string",
                "index": "analyzed",
                "include_in_all": false,
                "null_value": "na",
                "boost": 2.0
            },
            "title": { 
                "type": "string",
                "index": "analyzed",
                "include_in_all": true,
                "null_value": "na",
                "boost": 2.0
            },
            "description": {
                "type": "string",
                "index": "analyzed",
                "include_in_all": true,
                "null_value": "na",
                "boost": 1.0
            },
            "requirements": {
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            },
            "tags": {
                "type": "string",
                "index_name": "tag"
            },
            "published": {
                "type": "date",
                "format": "date_optional_time"
            },
            "contact": {
                "type": "object",
                "include_in_all": false,
                "properties": {
                    "firstname": {
                        "type": "string"
                    },
                    "lastname": { 
                        "type": "string"
                    }
                }
            },
            "location": { 
                "type": "geo_point",
                "lat_lon": true,
                "geohash": true,
                "geohash_precision": 12
            }
        }
    }
}
