<html tal:replace="structure context/manage_page_header"/>

     <span tal:replace="structure context/manage_tabs"/>

      <form action="" tal:attributes="action request/URL1" method="post">
         <table cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td/>
                  <td class="form-label">From</td>
                  <td class="form-element">
                      <input type="text" name="mfrom" size="80" value=""
                            tal:attributes="value request/mfrom | nothing">
                  </td>
              </tr>
               <tr>
                  <td/>
                  <td class="form-label">To</td>
                  <td class="form-element">
                      <input type="text" name="mto" size="80" value=""
                            tal:attributes="value request/mto | nothing">
                  </td>
              </tr>
               <tr>
                  <td/>
                  <td class="form-label">CC</td>
                  <td class="form-element">
                      <input type="text" name="cc" size="80" value=""
                            tal:attributes="value request/cc | nothing">
                  </td>
              </tr>
               <tr>
                  <td/>
                  <td class="form-label">BCC</td>
                  <td class="form-element">
                      <input type="text" name="bcc" size="80" value=""
                            tal:attributes="value request/bcc | nothing">
                  </td>
              </tr>
               <tr>
                  <td/>
                  <td class="form-label">Subject</td>
                  <td class="form-element">
                      <input type="text" name="subject" size="80" value=""
                            tal:attributes="value request/subject | context/title">
                  </td>
              </tr>
             <tr>
                  <td><img src="trombone.gif" alt="Attachment"/></td>
                  <td class="form-label" valign="top">Attachments</td>
                  <td class="form-element">
                      <a href="" tal:attributes="href context/getId" tal:content="string:${context/getId}.html"/>
                  </td>
             </tr>

             <tr>
                  <td/>
                  <td class="form-label" valign="top">Message</td>
                  <td class="form-element">
                      <textarea name="message:text" rows="10" cols="80"
                                  tal:content="request/message | nothing"/>
                  </td>
             </tr>
             <tr>
                  <td colspan="3" class="form-element">
                      <input class="form-element" type="submit" name="manage_sendmail:method" value=" Send " />
                  </td>
             </tr>
      </table>
   </form>

<html tal:replace="structure context/manage_page_footer"/>




