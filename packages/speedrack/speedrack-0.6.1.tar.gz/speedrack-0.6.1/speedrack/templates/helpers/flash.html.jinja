{# bootstrap friendly flash messages #}

{%- macro render_flash(message, category) %}
<div class="alert alert-block {{ alert_class(category) }}">
  <p>{{ message }}</p>
</div>
{% endmacro -%}

{# Valid: "success", "error", "warning", "info" #}
{%- macro alert_class(category) -%}alert-{{ category }}{%- endmacro -%}

{%- macro render_all_flash() %}
{%- with messages = get_flashed_messages(with_categories=True) %}
  {%- if messages %}
    {% for category, message in messages %}
      {{ render_flash(message, category) }}
    {%- endfor %}
  {% endif -%}
{% endwith -%}
{% endmacro -%}
