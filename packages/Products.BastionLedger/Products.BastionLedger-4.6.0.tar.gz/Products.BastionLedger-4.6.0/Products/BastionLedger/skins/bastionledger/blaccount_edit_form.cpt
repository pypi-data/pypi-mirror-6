<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bastionledger">

  <metal:javascript fill-slot="javascript_head_slot">
  <tal:js tal:replace="structure string:<script type=text/javascript language=javascript><!--"/>
    function doSubType() {
      document.edit_form.subtype.value = document.edit_form.subtype_list[document.edit_form.subtype_list.selectedIndex].value;
    }

    function doSubTypeList() {
       removectr = (document.edit_form.subtype_list.options.length) - 1;
       while (removectr > -1) {
           document.edit_form.subtype_list.options[removectr]=null;
           removectr--;
       }
       switch(document.edit_form.type.value) {<span tal:omit-tag="" tal:repeat="type here/Types">
           case "<span tal:replace="type"/>":<span tal:omit-tag="" tal:repeat="st python: here.subtypes(type)">
              document.edit_form.subtype_list.options[<span tal:replace="repeat/st/index"/>] = new Option("<span tal:replace="st"/>", "<span tal:replace="st"/>", false, false);</span>
	      break;</span>
       <span tal:omit-tag="" tal:condition="here/Types">
       document.form.subtype.value = document.form.subtype_list[document.form.subtype_list.selectedIndex].value;
       </span>
       }
    }
<tal:js tal:replace="structure string://--></script>"/>

  </metal:javascript>
 
    <div metal:fill-slot="main"
         tal:define="errors options/state/getErrors;
                     utool context/@@plone_portal_state/portal_url;
                     subtypes python: here.subtypes(here.type);
                     lockable python:hasattr(here, 'wl_isLocked');
                     isLocked python:lockable and here.wl_isLocked();">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="here/prettyTitle"/></h1>

      <form name="edit_form"  action="."  method="post"
            tal:attributes="action string:${here/getId}/${template/getId}" >

          <div class="field"
               tal:define="error errors/title|nothing;
                           Title request/title | here/Title;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="title" i18n:translate="label_title">Title</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text" id="title" name="title" value="" size="40"
                    tal:attributes="value Title;"/>

          </div>


          <div class="field"
               tal:define="error errors/description|nothing;
                           Description request/description | here/Description;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="title" i18n:translate="label_title">Description</label>

            <div tal:content="error">Validation error output</div>

            <textarea id="description" rows="3" name="description"  
                      tal:content="Description" />

          </div>

          <div class="field"
               tal:define="error errors/email|nothing;
                           Email request/email | context/email;"
               tal:condition="python: context.meta_type != 'BLAccount'"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="email" i18n:translate="label_email">Email</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_email">
                 In addition to email functionality, we link site members to
                 accounts by their email address.  You can pass full rfc822 email
                 names, and more than one by separating with a comma or semicolon.
            </div>


            <input type="text" id="email" name="email" value="" size="40"
                    tal:attributes="value Email;"/>

          </div>

          <div class="field"
               tal:define="error errors/address|nothing;
                           Address request/address | context/address | nothing;"
               tal:condition="python: context.hasProperty('address')"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="email" i18n:translate="label_email">Address</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_address">
                 Any mailing address associated with this account.
            </div>


            <textarea name="address:text" rows="4" cols="50"
                      tal:content="Address"/>
          </div>


          <div class="field"
               tal:define="error errors/accno|nothing;
                           Accno request/accno | here/accno;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label>Number</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_accno">
                  Your account number - defaults to our Id
            </div>


            <input type="text" id="accno" name="accno" value="" size="10"
                    tal:attributes="value Accno;"/>

          </div>

          <div class="field"
               tal:condition="python: context.meta_type == 'BLAccount'">

            <label for="type" i18n:translate="label_type">Type</label>
            <div tal:content="context/type"/>
          </div>

          <div class="field"
               tal:condition="python: context.meta_type == 'BLAccount'"
               tal:define="error errors/type|nothing;
                           Type request/type | here/type;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="type" i18n:translate="label_type">Type</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="type"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <select name="type" onchange="doSubTypeList()">
               <option tal:repeat="t here/Types" tal:content="t"
                       tal:attributes="selected python: t == Type and 1 or 0"/>
            </select>
           </div>

          <div class="field"
               tal:define="error errors/subtype|nothing;
                           Subtype request/subtype | here/subtype;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="subtype" i18n:translate="label_subtype">Subtype</label>

            <!--span class="fieldRequired" title="Required"
                  i18n:attributes="subtype"
                  i18n:translate="label_required">(Required)</span-->

            <div tal:content="error">Validation error output</div>

            <input type="text" name="subtype" value=""
                         tal:attributes="value here/subtype"/>
            <select name="subtype_list" onchange="doSubType()" tal:condition="subtypes">
               <option tal:repeat="st subtypes" tal:content="st"
                       tal:attributes="selected python: st == Subtype and 1 or 0"/>
            </select>
           </div>

          <div class="field"
               tal:define="error errors/currency|nothing;
                           Currency request/currency | here/base_currency;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="currency" i18n:translate="label_currency">Currency</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="currency"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <select name="currency">
               <option tal:repeat="cur context/Currencies" tal:content="cur"
                       tal:attributes="selected python: cur == Currency and 1 or 0"/>
            </select>
           </div>

          <div class="field"
               tal:define="error errors/tags|nothing;
                           Tags request/tags | here/tags;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="tags" i18n:translate="label_tags">Tags</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_shortname">
                   Arbitrarily form logical associations between accounts by assigning
                   them nominated tags.
            </div>

            <textarea rows="3" name="tags:lines" tal:content="python: ' '.join(Tags)"/>

           </div>


          <div class="formControls"
               tal:define="process_creation request/process_creation|nothing;">

            <img src="" class="context"
                   tal:define="portal context/portal_url/getPortalObject; locked portal/lock_icon.png;"
                   tal:condition="isLocked"
                   tal:replace="structure python:locked.tag(title='This item is locked')"
                   alt="Object locked"
                   i18n:attributes="alt"/>

            <input class="context"
                   
                   type="submit"
                   name="form.button.Save"
                   value="Save"
                   i18n:attributes="value"
                   tal:attributes="disabled python:isLocked and 'disabled' or None;" />

          </div>

        <input type="hidden" name="form.submitted" value="1" />

      </form>

    </div>
 
</html>
