#:kivy 1.0.9

<KeyLabel>:
    label: label_w

    anchor_x: "center"
    anchor_y: "center"

    Label:
        text: root.text
        id: label_w
        size_hint: 0.5, 0.5

        canvas.before:
            Color:
                rgb: 1, 0, 0

            Rectangle:
                pos: label_w.pos
                size: label_w.size

<ValueLabel>:
    anchor_x: "center"
    anchor_y: "center"

    Label:
        text: root.text
        id: label_w
        size_hint: 0.5, 0.5

        canvas.before:
            Color:
                rgb: 0, 1, 0

            Ellipse:
                pos: label_w.pos
                size: label_w.size
