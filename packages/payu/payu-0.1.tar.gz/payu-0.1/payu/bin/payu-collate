#!/usr/bin/env python

# Force Python version
from payu import reversion
reversion.repython('2.7.5', __file__)

# Standard library
import os

# Local
from payu.experiment import Experiment


#---
def payu_collate():

    expt = Experiment()
    expt.collate()

    if expt.postscript:
        expt.postprocess()


#---
if __name__ == '__main__':

    payu_collate()
