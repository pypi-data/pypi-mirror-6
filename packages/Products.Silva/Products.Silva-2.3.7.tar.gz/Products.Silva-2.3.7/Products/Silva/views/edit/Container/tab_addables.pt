<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
  lang="en"
  xml:lang="en"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  tal:define="
    global vein string:addables;
    global active_tab string:tab_metadata;
    global parent_screen_name string:properties;
    "
  i18n:domain="silva">

<metal:block use-macro="here/macro_index/macros/master">

  <metal:block metal:fill-slot="middleground">
    <tal:buttons tal:replace="structure model/@@tab_metadata_extra" />
  </metal:block>

<metal:block fill-slot="main">
<tal:block
  define="
    global model request/model;
    global fields python:here.tab_addables_form.get_fields();"
  condition="may_approve_content"
>

<form method="post" name="form" action="tab_addables_submit">
  <table class="columns columns3">
    <tbody>
      <tr>
        <tal:block replace="nothing">
          _____________________ sidebar _____________________
        </tal:block>
        <td class="left">
          <tal:block replace="nothing">
            ______________ vein navigation ______________
          </tal:block >
          <metal:use-macro use-macro="here/macro_vein_navigation/macros/vein">
            <metal:fill-slot fill-slot="sidebar">
              <tal:block replace="structure python: here.service_sidebar.render(model, 'tab_addables', vein)" />
            </metal:fill-slot>
          </metal:use-macro>
        </td>
        <td class="main">
          <tal:block replace="nothing">
            _____________________ main subtable _____________________
          </tal:block>

            <table class="listing">
              <thead>
                <tr tal:replace="nothing">
                  ______________ icon + vein + title row ______________
                </tr>
                <tr>
                  <td class="top"
                    colspan="2">
                    <h2>
                      <img tal:replace="structure icon" />
                      <span i18n:translate=""> addable settings for
                        &#xab;<tal:block content="title" i18n:name="title" />&#xbb;
                      </span>
                    </h2>
                  </td>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <th width="33%"
                    i18n:translate="">
                    element
                  </th>
                  <th i18n:translate="">
                    content
                  </th>
                </tr>

                <tal:repeat repeat="field fields">
                  <tal:define define="oddrow repeat/field/odd">
                    <tr valign="top"
                      tal:attributes="class python:oddrow and 'even' or 'odd'">
                      <td class="designator">
                        <span class="matchlabel">
                          <tal:block content="structure python: field.title()"
                          i18n:translate="">title</tal:block><span class="warning" tal:condition="python:field.is_required()">*</span>
                        </span>
                        <p tal:content="python:field.get_value('description')"
                          i18n:translate="">
                          comments here (field description)
                        </p>
                      </td>
                      <td class="field">
                        <input tal:replace="structure python:field.render(value=model.getProperty(field.id))" />
                      </td>
                    </tr>
                  </tal:define>
                </tal:repeat>
              </tbody>

              <tfoot>
                <tr class="controls">
                  <td class="align-right"
                    colspan="2">
                    <input class="button"
                      type="submit"
                      name="form_submitted"
                      value="save addables settings"
                      title="save addable settings for this publication: alt-a"
                      accesskey="a"
                      i18n:attributes="value;title"
                    />
                  </td>
                </tr>
              </tfoot>
            </table>

        </td>
        <td class="right">
        </td>
      </tr>
    </tbody>
  </table>
</form>

</tal:block>
</metal:block>
</metal:block>
</html>
