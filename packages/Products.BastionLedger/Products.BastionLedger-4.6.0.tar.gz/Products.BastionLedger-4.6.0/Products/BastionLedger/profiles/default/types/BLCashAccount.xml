<?xml version="1.0"?>
<object name="BLCashAccount" meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title"></property>
 <property name="description"> A Cash Account.</property>
 <property name="content_icon">blorderaccount.gif</property>
 <property name="content_meta_type">BLCashAccount</property>
 <property name="product">BastionLedger</property>
 <property name="factory"></property>
 <property name="immediate_view">blaccount_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
  <element value="BLCashOrder"/>
 </property>
 <property name="allow_discussion">False</property>
 <alias from="(Default)" to="blaccount_view"/>
 <alias from="payee" to="bastionbanking_payee_form"/>
 <alias from="edit" to="blaccount_edit_form"/>
 <alias from="taxgroups" to="blaccount_taxgroups_form"/>
 <alias from="settings" to="blorderaccount_settings_form"/>
 <alias from="orders" to="blorderaccount_orders"/>
 <alias from="payee" to="bastionbanking_payee_form"/>
 <alias from="attach" to="blattachments_edit_form"/>
 <alias from="view" to="blaccount_view"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/view" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Manage properties"/>
 </action>
 <action title="Tax Groups" action_id="taxgroups" category="object" condition_expr=""
    url_expr="string:${object_url}/taxgroups" visible="True">
  <permission value="BastionLedger: Manage"/>
 </action>
 <action title="Settings" action_id="terms" category="object" condition_expr=""
    url_expr="string:${object_url}/settings"
    visible="True">
  <permission value="BastionLedger: Operate"/>
 </action>
 <action title="Orders" action_id="orders" category="object" condition_expr=""
    url_expr="string:${object_url}/orders" visible="True">
  <permission value="View"/>
 </action>
 <action title="Payee" action_id="payee" category="object"
    condition_expr="object/getBastionMerchantService | nothing"
    url_expr="string:${object_url}/payee" visible="True">
  <permission value="View"/>
 </action>
</object>
