<%
name : 'create_database'
version : '0.2'
dest : '${module["pascalName"]}.sql'
%>
DROP TABLE ${module['tableName']};
CREATE TABLE ${module['tableName']} (
  % for i, f in enumerate(module['fields']):
  ${f['columnName']} ${f['databaseType']}${('(%d)' % int(f['max'])) if f['type'] in ['string', 'text'] else ''}${',' if i+1 < len(module['fields']) else ''}
  % endfor
);
