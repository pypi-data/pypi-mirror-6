<html tal:replace="structure context/manage_page_header"/>

    <div tal:replace="structure python:context.manage_form_title(context, context,
           form_title='<img src=%s/misc_/BastionLedger/blentry> %s' % (request['BASEPATH1'],
'Add Subsidiary Ledger Entry'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

     <form action="manage_addBLSubsidiaryEntry" method="post">
          <table width="100%" cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Description</td>
                  <td class="form-element">
                      <input type="text" name="title" size="35">
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Account</td>
                  <td class="form-element">
                       <select name="account">
                            <option tal:repeat = "account context/accountValues"
                                    value="" tal:attributes="value account/getId"
                                    tal:content="account/prettyTitle"/>
                      </select>
                  </td>
              </tr>

              <tr>
                  <td class="form-label">Debit/Credit</td>
                  <td class="form-element">
                      <select name="credit:int">
                           <option value="0" selected>Debit</option>
                           <option value="1">Credit</option>
                      </select>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Amount</td>
                  <td class="form-element">
                      <input type="text" name="amount:currency" size="10" value=""
                             tal:attributes="value context/total">
                  </td>
              </tr>
              <tr>
                  <td class="form-element">
                     <input type="submit" value=" Add ">
       		  </td>
              </tr>
          </table>
     </form>
   
<html tal:replace="structure context/manage_page_footer"/>
