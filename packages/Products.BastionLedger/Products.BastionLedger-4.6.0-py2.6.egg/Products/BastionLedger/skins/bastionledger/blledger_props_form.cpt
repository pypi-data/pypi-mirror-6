<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">

  <metal:border fill-slot="top_slot">
    <tal:border define="dummy python:request.set('enable_border',1)" />
  </metal:border>
 
<body>
  <div metal:fill-slot="main"
       tal:define="errors options/state/getErrors;
                   utool context/@@plone_portal_state/portal_url;">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;
          <span tal:replace="context/Title | context/getId"/></h1>

      <form name="edit" action="" method="post" tal:attributes="action template/getId">


          <div class="field"
               tal:condition="python:site_properties.getProperty('visible_ids', None)"
               tal:define="error errors/id | nothing;
                           id python:request.get('id', here.show_id() and here.getId() or '');"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="id" i18n:translate="label_short_name">Short Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Short Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

          <input type="hidden"
                 name="id"
                 tal:condition="python:not site_properties.getProperty('visible_ids', '')"
                 tal:attributes="value python:request.get('id', here.getId())"
                 />

          </div>

          <div class="field"
               tal:define="error errors/title|nothing;
                           Title request/title | context/Title;"
               tal:attributes="class python:error and 'field error' or 'field'">

             <label for="title" i18n:translate="label_title">Title</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="title"
                   i18n:translate="label_required">(Required)</span>

             <div tal:content="error">Validation error output</div>

             <input type="text" id="title" name="title" value="" size="40"
                     tal:attributes="value Title;"/>
          </div>

          <div class="field"
               tal:define="description request/description | context/Description ">

            <label for="description" 
                   i18n:translate="label_description">Description</label>

            <div class="formHelp" i18n:translate="help_description">
              A brief description of the ledger.
            </div>

            <textarea cols="80" rows="5"  id="description" name="description:text"
                      tal:content="description">
              Description
            </textarea>
          </div>

          <div class="field"
               tal:define="error errors/next_accno|nothing;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="next_accno" 
                   i18n:translate="label_next_accno">Next Account Number</label>
 
            <span class="fieldRequired" title="Required"
                   i18n:attributes="title"
                   i18n:translate="label_required">(Required)</span>


            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_next_accno">
                Do not touch this if you don't know what you're doing ...
            </div>

            <div class="field">
               <span class="label">Prefix</span>
               <input type="text" name="account_prefix" size="2" maxlength="2" value=""
                      tal:attributes="value request/account_prefix | context/account_prefix">
               &nbsp;&nbsp;
               <span class="label">Number</span>
               <input type="text" align="right" name="account_id" size="12" value=""
                      tal:attributes="value request/account_id | context/currentAccountId">
            </div>
          </div>

          <div class="field"
               tal:define="error errors/next_txnno|nothing;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="next_txnno" 
                   i18n:translate="label_next_txnno">Next Transaction Number</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="title"
                   i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_next_txnno">
                Do not touch this if you don't know what you're doing ...
            </div>

            <div class="field">
               <span class="label">Prefix</span>
               <input type="text" name="txn_prefix" size="2" maxlength="2" value=""
                      tal:attributes="value request/txn_prefix | context/txn_prefix">
               &nbsp;&nbsp;
               <span class="label">Number</span>
               <input type="text" align="right" name="txn_id" size="12" value=""
                      tal:attributes="value request/txn_id | context/currentTxnId">
            </div>
          </div>

          <div class="field" 
               tal:define="error errors/controlAccount|nothing;
                           controlAccounts context/controlAccounts | nothing"
               tal:attributes="class python:error and 'field error' or 'field'"
               tal:condition="nocall: controlAccounts">

            <label for="controlAccounts" 
                   i18n:translate="label_controlAccount">Control Account</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="title"
                   i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_controlAccount">
                 The control account is the account in the Ledger which contains just the
                 balance information of the detailed entries context
            </div>

            <select name="control_accounts:list" size="5" multiple>
              <option tal:repeat="account python: context.Ledger.accountValues(sort_on='accno')"
                      tal:content="account/prettyTitle"
                      tal:attributes="value account/getId;
                                      selected python: account in controlAccounts and 1 or 0"/>
            </select>
            <div class="field">
                <input class="standalone" type="submit" name="form.button.ChangeControl" value=" Change "/>
                <input class="standalone" type="submit" name="form.button.Recalculate" value=" Recalculate "/>
            </div>

           </div>

           <div class="field" tal:define="error errors/currencies|nothing;
                                          Currencies request/currencies | context/currencies"
                tal:attributes="class python:error and 'field error' or 'field'">
 
             <label for="supported_currencies" 
                    i18n:translate="label_supported_currencies">Supported Currencies</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="title"
                   i18n:translate="label_required">(Required)</span>

             <div tal:content="error">Validation error output</div>

             <div class="formHelp" i18n:translate="help_supported_currencies">
		Select the currencies which accounts and transactions in this ledger can be made
                against.
             </div>

             <select name="currencies:list:ignore_empty" multiple size="3"> 
                  <option tal:repeat="cur context/allCurrencies"
                          tal:attributes="selected python: cur in Currencies and 1 or 0"
                          tal:content="cur"/>
             </select>

           </div>     

          <div class="field">

             <label for="currency" i18n:translate="label_defaultCurrency">Default Currency</label>

             <div tal:content="context/defaultCurrency"/>
	  </div>

          <div class="field"
               tal:define="error errors/email|nothing;
                           Email request/email | python: context.getProperty('email');"
               tal:attributes="class python:error and 'field error' or 'field'">

             <label for="email" i18n:translate="label_title">Correspondence Email</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="title"
                   i18n:translate="label_required">(Required)</span>

             <div tal:content="error">Validation error output</div>

             <div class="formHelp" i18n:translate="help_email">
		 The email address for any account or billing enquiries for this ledger.
             </div>

             <input type="text" id="email" name="email" value="" size="40"
                     tal:attributes="value Email;"/>
          </div>

          <div class="field"
               tal:condition="python: context.hasProperty('inventory')"
               tal:define="Inventory request/inventory | context/inventory | nothing;">

            <label for="description" 
                   i18n:translate="label_instructions">Inventory</label>

            <div class="formHelp" i18n:translate="help_instructions">
                Location of parts to be traded in this Orderbook.
            </div>

             <select name="inventory"> 
                  <option tal:repeat="inv context/inventoryValues"
                          tal:attributes="value inv/getId;
                                          selected python: inv==Inventory and 1 or 0"
                          tal:content="inv/Title | inv/getId"/>
             </select>

          </div>

          <div class="field"
               tal:condition="python: context.hasProperty('instructions')"
               tal:define="Instructions request/instructions | context/instructions | nothing">

            <label for="description" 
                   i18n:translate="label_instructions">Instructions</label>

            <div class="formHelp" i18n:translate="help_instructions">
              Payment instructions (for Order notes).
            </div>

            <textarea cols="80" rows="5"  id="instructions" name="instructions:text"
                      tal:content="Instructions">
              Instructions
            </textarea>
          </div>

         <div class="formControls" colspan="2">
               <input class="context"  type="submit" 
                      name="form.button.Edit"
                      value="Edit" i18n:attributes="Edit" />
         </div>

         <input type="hidden" name="form.submitted" value="1"/>
      </form>
 
  </div>
 
</body>
</html>
