<html metal:use-macro="container/standard_template.pt/macros/page">
    <div metal:fill-slot="body" 
         tal:define="txn python: here.getTransaction(request.form['id'])">

    <table border="0" cellpadding="2" cellspacing="0" width="100%">
       <tr>
           <td align="right">
               <table>
                  <tr>
                     <td class="form-label">Date</td>
                     <td class="form-element" tal:content="txn/date"/>
                  </tr>
               </table>
           </td>
       </tr>
    </table>
    <table border="0" cellpadding="2" cellspacing="0" width="100%" bgcolor="silver">
       <tr>
           <td>
              <table border="0" cellpadding="2" cellspacing="0" width="100%">
 
       <tr>
           <td class="form-label">Employee No.</td>
           <td class="form-element" tal:content="here/getId"/>
                   <td class="form-label">Salary P.A.</td>
                   <td class="form-element" tal:content="here/salary"/>
         </tr>
       <tr>
           <td class="form-label">Name</td>
           <td class="form-element" tal:content="here/title"/>
                    <td class="form-label">Bank Account</td>
                   <td class="form-element" tal:content="here/bank_account"/>
        </tr>
       <tr>
           <td class="form-label">Department</td>
           <td class="form-element" tal:content="here/department"/>
                   <td class="form-label">Tax Number</td>
                    <td class="form-element" tal:content="here/tax_number"/>
         </tr>
         <tr>
              <td colspan="2">&nbsp;</td>
                    <td class="form-label">Tax Code</td>
                    <td class="form-element" tal:content="here/tax_code"/>

        </tr>
            </table>
           </td>
        </tr>
        <tr>
           <td>
             <table border="0" cellpadding="3" cellspacing="3" width="100%">
               <tr>
                 <td width="35%">
                   <table border="1" cellpadding="2" cellspacing="0" bgcolor="white" width="100%">
                     <tr>
                          <td colspan="3" align="center">Taxable Payments</td>
                     </tr>
                     <tr class="list-header">
                          <td>Type</td>
                          <td>Quantity</td>
                          <td>Value</td>
                     </tr>
                     <tr>
                          <td height="200" valign="top"><span tal:replace="txn/Gross/title"/></td>
                          <td></td>
                          <td align="right" valign="top"><span tal:replace="txn/Gross/amount"/></td>
                      </tr>
                     <tr>
                          <td colspan="2" class="form-label">Total Taxable</td>
                          <td align="right"><span tal:replace="txn/Gross/amount"/></td>
                      </tr>
                 </table>
               </td>
               <td width="35%">
                 <table border="1" cellpadding="2" cellspacing="0" bgcolor="white" width="100%">
                     <tr>
                          <td colspan="3" align="center">Non-Taxable Payments</td>
                     </tr>
                     <tr class="list-header">
                          <td>Type</td>
                          <td>Quantity</td>
                          <td>Value</td>
                     </tr>
                     <tr>
                          <td height="200"></td>
                          <td></td>
                          <td></td>
                      </tr>
                     <tr>
                          <td colspan="2" class="form-label">Total Non-Taxable</td>
                          <td></td>
                      </tr>
                 </table>
               </td>
               <td width="25%">
                  <table border="1" cellpadding="2" cellspacing="0" bgcolor="white" width="100%">
                     <tr>
                          <td colspan="2" align="center">Deductions</td>
                     </tr>
                     <tr class="list-header">
                          <td>Description</td>
                          <td>Amount</td>
                     </tr>
                     <tr>
                          <td height="200" valign="top"><span tal:replace="txn/Tax/title"/></td>
                          <td valign="top" align="right"><span tal:replace="txn/Tax/absAmount"/></td>
                      </tr>
                      <tr>
                          <td class="form-label">Total Deductions</td>
                          <td align="right"><span tal:replace="txn/Tax/absAmount"/></td>
                      </tr>
                </table>
               </td>
              </tr>
             </table>
           </td>
        </tr>
         <tr>
            <td>
                <table border="0" cellpadding="3" cellspacing="3" width="100%">
                   <tr>
                       <td width="40%" valign="top">
                   <table border="1" cellpadding="2" cellspacing="0" bgcolor="white" width="100%">
                     <tr>
                          <td colspan="2" align="center">Year To Date</td>
                     </tr>
                     <tr class="list-header">
                          <td>Gross Taxable</td>
                          <td>Tax</td>
                     </tr>
                     <tr>
                          <td align="right" valign="center" height="40">
                               <span tal:replace="python: here.sum( 'Gross', txn.date )"/></td>
                          <td align="right" valign="center">
                               <span tal:replace="python: here.sum( 'Tax', txn.date )"/></td>
                     </tr>
                </table>
                       </td>
                        <td height="80" valign="top">
                            <table bgcolor="white" width="100%" height="80">
                               <tr><td>Message</td></tr>
                               <tr><td><span tal:replace="structure here/message | nothing"/></td></tr>
                            </table>
                        </td>
                        <td valign="bottom" width="20%">
                             <table bgcolor="white" width="100%">
                               <tr>
                                   <td class="form-label">NET</td>
                                   <td align="right"><span tal:replace="txn/Net/absAmount"/></td>
                               </tr>
                            </table>
                         </td>
                 </tr>
                </table>
            </td>
        </tr>
      </table>

  </div>
</html>
