#:kivy 1.0.9

<HorizontalListView>:
    container: container
    ScrollView:
        pos: root.pos
        on_scroll_y: root._scroll(args[1])
        do_scroll: True
        GridLayout:
            cols: 6
            id: container

<ReorderSentencesWidget>:
    orientation: "horizontal"

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.2, 1

        Button:
            text: "^" if root.game.orientation == "vertical" else "<"
            on_release: root.game.move_sentence("up", *args)
        Button:
            text: "v" if root.game.orientation == "vertical" else ">"
            on_release: root.game.move_sentence("down", *args)
