<configure
	xmlns="http://namespaces.zope.org/zope"
	xmlns:browser="http://namespaces.zope.org/browser"
	xmlns:z3c="http://namespaces.zope.org/z3c"
	i18n_domain="onf.insee">

	<!-- GeoPortal test views -->
	<class class=".test.GeoportalTest">
		<implements
			interface="zope.annotation.interfaces.IAttributeAnnotatable" />
		<require
			interface=".test.IGeoportalTest"
			set_schema=".test.IGeoportalTest"
			permission="zope.ManageSite" />
	</class>

	<z3c:pagelet
		name="addGeoportalTest.html"
		for="zope.site.interfaces.IFolder"
		class=".test.GeoportalTestAddForm"
		layer="ztfy.zmi.layer.IZMILayer"
		permission="zope.ManageSite" />

	<browser:viewlet
		name=":: Add Geoportal test..."
		viewURL="@@addGeoportalTest.html"
		for="zope.site.interfaces.IFolder"
		manager="ztfy.skin.viewlets.contents.interfaces.IContentsViewletManager"
		class=".test.GeoportalTestAddFormMenuItem"
		permission="zope.ManageSite"
		layer="ztfy.zmi.layer.IZMILayer"
		weight="31" />

	<z3c:pagelet
		name="properties.html"
		for=".test.IGeoportalTest"
		class=".test.GeoportalTestEditForm"
		layer="ztfy.zmi.layer.IZMILayer"
		permission="zope.ManageSite" />

	<browser:viewlet
		name="Properties"
		viewURL="@@properties.html"
		for=".test.IGeoportalTest"
		manager="ztfy.skin.viewlets.actions.interfaces.IActionsViewletManager"
		class="ztfy.skin.menu.PropertiesMenuItem"
		permission="zope.ManageSite"
		layer="ztfy.zmi.layer.IZMILayer"
		weight="10" />

</configure>