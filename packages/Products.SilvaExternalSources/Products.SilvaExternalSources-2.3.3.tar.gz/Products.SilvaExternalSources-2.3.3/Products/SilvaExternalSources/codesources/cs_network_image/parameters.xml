  <groups>
    <group>
      <title>Default</title>
      <fields>
      <field><id>image_location</id> <type>LookupWindowField</type>
        <values>
          <alternate_name></alternate_name>
          <button_label>get image...</button_label>
          <css_class>store</css_class>
          <default></default>
          <description>Enter or lookup the url of an image. You can drag and drop an image from another browser window (if the image is also a link you will get the link, so view the image first). Or, lookup a local image within your site with the get image button.</description>
          <display_maxwidth></display_maxwidth>
          <display_width type="int">20</display_width>
          <enabled type="int">1</enabled>
          <external_validator></external_validator>
          <extra></extra>
          <hidden type="int">0</hidden>
          <max_length></max_length>
          <max_rows type="int">1</max_rows>
          <onclick>{
var myid = this.getAttribute('id').replace(/^button/,'input');
reference.getReference(
function(path, id, title) {
document.getElementById(myid).value = path;;
}, '%(url)s', 'Silva Image', true, '%(selected_path)s')}</onclick>
          <required type="int">1</required>
          <required_rows type="int">1</required_rows>
          <show_add_remove type="int">0</show_add_remove>
          <show_edit_button type="int">0</show_edit_button>
          <title>image location</title>
          <truncate type="int">0</truncate>
          <unicode type="int">0</unicode>
          <whitespace_preserve type="int">0</whitespace_preserve>
        </values>
        <tales>
        </tales>
        <messages>
          <message name="external_validator_failed">The input failed the external validator.</message>
          <message name="required_not_found">Input is required but no input given.</message>
          <message name="exceeded_maxrows">Too many references.</message>
          <message name="required_not_met">Not enough references.</message>
        </messages>
      </field>
      <field><id>alignment_selector</id> <type>ListField</type>
        <values>
          <alternate_name></alternate_name>
          <css_class>store</css_class>
          <default></default>
          <description>Image alignment. If you choose a float the content that follows will flow around the image.</description>
          <enabled type="int">1</enabled>
          <external_validator></external_validator>
          <extra></extra>
          <extra_item></extra_item>
          <first_item type="int">0</first_item>
          <hidden type="int">0</hidden>
          <items type="list">[('default', 'default'), ('align left', 'image-left'), ('align center', 'image-center'), ('align right', 'image-right'), ('float left', 'float-left'), ('float right', 'float-right')]</items>
          <required type="int">0</required>
          <size type="int">1</size>
          <title>alignment</title>
          <unicode type="int">1</unicode>
          <whitespace_preserve type="int">0</whitespace_preserve>
        </values>
        <tales>
        </tales>
        <messages>
          <message name="external_validator_failed">The input failed the external validator.</message>
          <message name="required_not_found">Input is required but no input given.</message>
          <message name="unknown_selection">You selected an item that was not in the list.</message>
        </messages>
      </field>
