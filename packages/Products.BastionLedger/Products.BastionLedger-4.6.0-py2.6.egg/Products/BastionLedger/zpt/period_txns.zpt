<html tal:replace="structure context/manage_page_header"/>

    <span tal:replace="structure context/manage_tabs"/>

    <br/>
    <form action="" name="objectItems" method="post" tal:attributes="action request/URL1"
          tal:define="sort_on request/sort_on | string:effective;
                      ledger_txns request/ledger_txns | python: False;
                      txns python: ledger_txns and context.blLedgerTransactions() or context.blTransactions();">

       <div class="list-item" tal:condition="not: request/ledger_txns | nothing">
           <input type="hidden" name="ledger_txns:boolean" value="1"/>
           <input type="submit" class="form-element" name="manage_transactions:method" value="  Ledger Txns  "/>
       </div>

       <div class="list-item" tal:condition="request/ledger_txns | nothing">
           <input type="submit" class="form-element" name="manage_transactions:method" value="Period-End Txns"/>
       </div>

       <p class="form-help" tal:condition="not: txns">No transactions for journal</p>

       <table border="0" cellpadding="2" cellspacing="0" width="100%" tal:condition="txns">
           <tr class="list-header">
               <td/>
               <td/>
               <td class="list-item">Effective</td>
               <td class="list-item">Ledger</td>
               <td class="list-item">Description</td>
               <td class="list-item">Status</td>
               <td class="list-item" align="right">Amount</td>
               <td>&nbsp;</td>
               <td class="list-item">Entered By</td>
               <td class="list-item" nowrap>Last Modified</td>
           </tr>
           <tr class="" tal:repeat="item txns"
               tal:attributes="class python: repeat['item'].index % 2 and 'row-normal' or 'row-hilite'">
               <td class="list-item">
                  <input type="checkbox" name="ids:list" value="" tal:attributes="value item/getId">
               </td>
               <td class="list-item">
                   <img src="" tal:attributes="src item/icon"/>
               </td>
               <td class="list-item" tal:content="python: item.effective().strftime('%Y-%m-%d')"/>
               <td class="list-item" tal:content="item/ledgerId"/>
               <td class="list-item">
                   <a href="" tal:attributes="href string:${item/absolute_url}/manage_workspace"  
                              tal:content="item/title_and_id"/>
               </td>
               <td class="list-item" tal:content="item/status"/>
               <td class="list-item" align="right" tal:content="item/debitTotal"/>
               <td>&nbsp;</td>
               <td class="list-item" tal:content="item/entered_by"/>
               <td class="list-item" nowrap
                   tal:content="python: item.bobobase_modification_time().strftime('%Y-%m-%d %H:%M')"/>
           </tr>
           <tr tal:condition="not: ledger_txns">
               <td colspan="10"><hr/></td>
           </tr>
           <tr tal:condition="python: context.meta_type == 'BLPeriodInfo' and not ledger_txns">
               <td colspan="10">
                   <input type="checkbox" name="reporting:boolean" value="1"/>
                   <span class="list-item">Reporting Balances</span>&nbsp;
                   <input type="submit" class="form-element" value="  Post  " name="postTransactions:method"/>
                   <input type="submit" class="form-element" value=" Reverse " name="reverseTransactions:method"/>
               </td>
           </tr>
       </table>
    </form>

<html tal:replace="structure context/manage_page_footer"/>





