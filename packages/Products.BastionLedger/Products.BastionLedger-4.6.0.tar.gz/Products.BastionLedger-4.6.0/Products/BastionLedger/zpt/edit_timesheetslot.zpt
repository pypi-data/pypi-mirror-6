<html tal:replace="structure context/manage_page_header"/>
     <span tal:replace="structure python:container.manage_tabs(help_topic='receivables.stx',
                                                               help_product='BastionLedgerL')"/>


      <form action="" tal:attributes="action request/URL1" method="post">
          <table cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-optional" tal:content="python:'Title'"/>
                  <td class="form-element">
                      <input type="text" name="title" size="35" value="" tal:attributes="value container/title">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Ratio'"/>
                  <td class="form-element">
                       <input type="text" name="ratio:float" size="5" value="" tal:attributes="value container/ratio">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Min Daily Hours'"/>
                  <td class="form-element">
                       <input type="text" name="min_hrs:float" value="" tal:attributes="value container/min_hrs" size="5">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Max Daily Hours'"/>
                  <td class="form-element">
                       <input type="text" name="max_hrs:float" value="" tal:attributes="value container/max_hrs" size="5">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Default Daily Hours'"/>
                  <td class="form-element">
                      <span tal:repeat="i python: range(0, 7)">
                         <input type="text" name="defaults:float" value="" 
                                tal:attributes="value python:container.defaults[i]" size="5">
                      </span>
                  </td>
                  <td class="form-help">Sun - Sat</td>
              </tr>
              <tr>
                 <td colspan=2>
                   <input type="submit" name="manage_edit:method" value=" Edit ">
                 </td>
              </tr>
        </table>
      </form>
<html tal:replace="structure context/manage_page_footer"/>




