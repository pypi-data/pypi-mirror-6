<html tal:replace="structure context/manage_page_header"/>

    <div tal:replace="structure python:container.manage_form_title(context, context,
           form_title='<img src=%s/misc_/BastionLedger/timesheetslot> %s' % (request['BASEPATH1'],
'Add Timesheet Slot'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

     <form action="manage_addBLTimesheetSlot" method="post">
          <table cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Id</td>
                  <td class="form-element">
                      <input type="text" name="id" size="15">
                  </td>
              </tr>
              <tr>
                  <td class="form-optional" tal:content="python:'Title'"/>
                  <td class="form-element">
                      <input type="text" name="title" size="35">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Ratio'"/>
                  <td class="form-element">
                       <input type="text" name="ratio:float" value="1.0" size="5">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Min Daily Hours'"/>
                  <td class="form-element">
                       <input type="text" name="min_hrs:float" value="0.0" size="5">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Max Daily Hours'"/>
                  <td class="form-element">
                       <input type="text" name="max_hrs:float" value="8.0" size="5">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" tal:content="python:'Default Daily Hours'"/>
                  <td class="form-element">
                       <input type="text" name="defaults:list:float" value="0.0" size="5" tal:repeat="i python: range(0,7)">
                  </td>
                  <td class="form-help">Sun - Sat</td>
              </tr>
              <tr>
                  <td class="form-element">
                     <input type="submit" value=" Add ">
       		  </td>
              </tr>
          </table>
     </form>
   
<html tal:replace="structure context/manage_page_footer"/>
