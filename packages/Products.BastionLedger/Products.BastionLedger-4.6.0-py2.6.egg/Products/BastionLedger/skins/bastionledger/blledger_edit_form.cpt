<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bastionledger">

  <metal:border fill-slot="top_slot">
    <tal:border define="dummy python:request.set('enable_border',1)" />
  </metal:border>
 
<body>
  <div metal:fill-slot="main"
       tal:define="utool context/@@plone_portal_state/portal_url">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)"
                tal:attributes="src string:${utool}/${icon}">&nbsp;
          <span tal:replace="context/Title | context/getId"/></h1>

      <form name="edit_form" action="" method="post"
            tal:attributes="action string:${context/getId}/${template/getId}">

         <fieldset>

             <legend>General Information</legend>

          <div class="field"
               tal:condition="python:site_properties.getProperty('visible_ids', None)"
               tal:define="error errors/id | nothing;
                           id python:request.get('id', here.show_id() and here.getId() or '');"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="id" i18n:translate="label_short_name">Short Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Short Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

          <input type="hidden"
                 name="id"
                 tal:condition="python:not site_properties.getProperty('visible_ids', '')"
                 tal:attributes="value python:request.get('id', here.getId())"
                 />

          </div>

          <div class="field"
               tal:define="error errors/title|nothing;
                           Title request/title | context/Title;"
               tal:attributes="class python:error and 'field error' or 'field'">

             <label for="title" i18n:translate="label_title">Company Name</label>

             <span class="fieldRequired" title="Required"
                   i18n:attributes="title"
                   i18n:translate="label_required">(Required)</span>

             <div tal:content="error">Validation error output</div>

             <input type="text" id="title" name="title" value="" size="40"
                     tal:attributes="value Title;"/>
          </div>

          <div class="field"
               tal:define="description request/description | context/Description ">

            <label for="description" 
                   i18n:translate="label_description">Description</label>

            <div class="formHelp" i18n:translate="help_description">
              A brief description of the item.
            </div>

            <textarea cols="80" rows="5"  id="description" name="description:text"
                      tal:content="description" >
              Description
            </textarea>
          </div>

          <div class="field"
               tal:define="address request/address | context/address ">

            <label for="address" 
                   i18n:translate="label_address">Address</label>

            <div class="formHelp" i18n:translate="help_address">
              Street address of the registered office.
            </div>

            <textarea cols="80" rows="5"  id="address:text" name="address"
                      tal:content="address">
              Address
            </textarea>
          </div>

        </fieldset>
  
        <fieldset>

          <legend>Statutory Information</legend>

          <div class="field"
               tal:define="error errors/company_number|nothing;
                           Company_Number request/company_number | context/company_number;"
               tal:attributes="class python:error and 'field error' or 'field'">

              <label for="company_number" i18n:translate="label_company_number">Company Number</label>

              <div tal:content="error">Validation error output</div>

              <input type="text" id="company_number" name="company_number" value="" size="40"
                      tal:attributes="value Company_Number;"/>
          </div>

          <div class="field"
               tal:define="error errors/tax_number|nothing;
                           Tax_Number request/tax_number | context/tax_number;"
               tal:attributes="class python:error and 'field error' or 'field'">

              <label for="tax_number" i18n:translate="label_tax_number">Tax Number</label>

              <div tal:content="error">Validation error output</div>

              <input type="text" id="tax_number" name="tax_number" value="" size="40"
                      tal:attributes="value Tax_Number;"/>
          </div>

          <div class="field"
               tal:define="error errors/industry_code |nothing;
                           Industry_Code request/industry_code | context/industry_code;"
               tal:attributes="class python:error and 'field error' or 'field'">

              <label for="industry_code" i18n:translate="label_industry_code">Industry Code</label>

              <div tal:content="error">Validation error output</div>

              <input type="text" id="industry_code" name="industry_code" value="" size="40"
                      tal:attributes="value Industry_Code;"/>
          </div>

          <div class="field"
               tal:define="error errors/incorporation_date|nothing;
                           Incorporation_Date request/incorporation_date | context/incorporation_date;
                           inputvalue Incorporation_Date;
                           formname string:edit_form;
                           show_hm python: False;
                           inputname string:incorporation_date;"
               tal:attributes="class python:error and 'field error' or 'field'">

              <label for="incorporation_date" 
                     i18n:translate="label_incorporation_date">Incorporation Date</label>

              <div tal:content="error">Validation error output</div>

              <span metal:use-macro="context/calendar_macros/macros/calendarDatePickerBox"/>

          </div>

          <div class="field"
               tal:define="directors request/directors | context/directors ">

            <label for="directors" 
                   i18n:translate="label_directors">Directors</label>

            <div class="formHelp" i18n:translate="help_directors">
              A brief directors of the item.
            </div>

            <textarea cols="80" rows="5"  id="directors" name="directors:lines"
                      tal:content="python: '\n'.join(directors)">
              Directors
            </textarea>
          </div>

          <div class="field"
               tal:define="error errors/secretary|nothing;
                           Secretary request/secretary | context/secretary;"
               tal:attributes="class python:error and 'field error' or 'field'">

              <label for="secretary" i18n:translate="label_secretary">Secretary</label>

              <div tal:content="error">Validation error output</div>

              <input type="text" id="secretary" name="secretary" value="" size="40"
                      tal:attributes="value Secretary;"/>
          </div>

         </fieldset>

         <fieldset>

             <legend>Jurisdiction Information</legend>

          <div class="field"
               tal:define="currency request/currency | context/currency ">

            <label for="currency" 
                   i18n:translate="label_currency">Currency</label>

            <div class="formHelp" i18n:translate="help_currency">
               The default currency for amounts.
            </div>

            <select name="currency">
                <option tal:repeat="c context/Currencies"
                        tal:content="c"
                        tal:attributes="selected python: c==currency"/>
            </select>

          </div>

          <div class="field"
               tal:define="timezone request/timezone | context/timezone ">

            <label for="timezone" 
                   i18n:translate="label_timezone">Time Zone</label>

            <div class="formHelp" i18n:translate="help_timezone">
               The time zone for this ledger.
            </div>

            <select name="timezone">
                <option tal:repeat="c context/TimeZones"
                        tal:content="c"
                        tal:attributes="selected python: c==timezone"/>
            </select>

          </div>
       
         </fieldset>

         <div class="formControls" colspan="2">
               <input class="context"  type="submit" name="form.button.Edit"
                      value="Edit" i18n:attributes="Edit" />
         </div>

         <input type="hidden" name="form.submitted" value="1"/>
      </form>
  </div>
 
</body>
</html>
