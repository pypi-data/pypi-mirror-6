#!/bin/sh
set -x

st=''

python setup.py sdist --formats=gztar,zip
st=$?$st
echo $st

pypi=/eng/ssb/websites/ssbpublic/draft_pypi/
st=$?$st
echo $st

mkdir -p 	$pypi/.data
st=$?$st
echo $st

cp dist/* 	$pypi/.data
st=$?$st
echo $st

st=`echo $st | tr -d 0 | cut -c1-1`


if [ "$st" = "" ]
then
    basketweaver2  $pypi
    exit $?
else
    echo build problems...
    exit 1
fi

