<vc xmlns:bind="bind">
    <hc>
        <button id="refresh" text="Refresh" icon="refresh" />
        <button id="inquiry" text="Library inquiry" />
    </hc>

    <body>
        <pad>
            <label text="Drives" style="bold" />

            <bind:collection bind="drives" id="drives">
                <dt bind="__items">
                    <dtr>
                        <dth text="Drive #" /> 
                        <dth text="Status" /> 
                        <dth text="Barcode" /> 
                        <dth text="Origin slot" /> 
                        <dth text="Control" /> 
                    </dtr>
                </dt>

                <bind:template>
                    <dtr>
                        <dtd><label bind="drive" /></dtd>
                        <dtd><label bind="status" /></dtd>
                        <dtd><label bind="barcode" /></dtd>
                        <dtd><label bind="origin" /></dtd>
                        <dtd width="1"> 
                            <button id="unload" icon="eject" text="Unload" />
                        </dtd>
                    </dtr>
                </bind:template>
            </bind:collection>
        </pad>

        <pad>
            <label text="Slots" style="bold" />

            <hc>
                <dropdown id="source-slot" />
                <label text=": " />

                <button id="load" icon="play" text="Load" />
                <button id="format" icon="asterisk" warning="Format?" text="Format" />
                <button id="fsck" icon="wrench" text="Check" />
                <button id="move" icon="arrow-right" text="Move to" />
                <dropdown id="dest-slot" />
            </hc>
        </pad>
    </body>
</vc>
