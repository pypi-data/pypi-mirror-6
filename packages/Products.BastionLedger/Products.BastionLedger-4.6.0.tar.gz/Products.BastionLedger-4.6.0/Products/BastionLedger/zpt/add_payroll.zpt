<html tal:replace="structure context/manage_page_header"/>

    <div tal:replace="structure python:context.manage_form_title(context, context,
           form_title='<img src=%s/misc_/BastionLedger/blpayroll> %s' % (request['BASEPATH1'],
'Add BLPayroll'),
           help_product='BastionLedger',
           help_topic='add.stx')"/>

     <form action="manage_addBLPayroll" method="post">
        <table cellpadding="0" cellspacing="2" border="0">
       <tr><td class="form-label">Id</td>
             <td class="form-element">
                 <input type="text" name="id" size="20">
             </td>
       </tr>
       <tr><td class="form-label">Title</td>
              <td class="form-element">
                 <input type="text" name="title" size="35">
             </td>
       </tr>
       <tr><td class="form-label">Control Account</td>
           <td class="form-element">
              <select name="controlAccount">
                 <option tal:repeat="account context/Ledger/accountValues"
                         value="" tal:attributes="value account/getId" 
                         tal:content="account/prettyTitle"/>
              </select>
          </td>
       </tr>
       <tr><td class="form-label">Timesheet Submission Day</td>
           <td class="form-element">
              <select name="timesheet_day">
                 <option tal:repeat="day python:modules['Products.BastionLedger.BLPayroll'].select_day_of_week()"
                         tal:content="day"/>
              </select>
          </td>
       </tr>
       <tr><td colspan="2" align="center"><input type="submit" value=" Add "/></td></tr>
        </table>
     </form>
   
<html tal:replace="structure context/manage_page_footer"/>
