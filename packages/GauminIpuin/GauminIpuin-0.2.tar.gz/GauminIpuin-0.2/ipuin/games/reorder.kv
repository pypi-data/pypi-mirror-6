#:kivy 1.0.9

<ShuffledLabel>:
    text: self.text

    canvas.before:
        Color:
            rgb: .4, .4, .4
        Ellipse:
            pos: self.pos
            size: self.size

<ShuffledWidget>:
    gameplace: gameplace
    orientation: "vertical"

    FloatLayout:
        id: gameplace
        size_hint: 0.8, 0.8
        pos_hint: {"x": 0.1, "y": 0}

        canvas.before:
            Color:
                rgb: (.2, .2, 0)
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.2

        Label:
            canvas.before:
                Color:
                    rgb: (0, 1, 0) if root.finished else (1, 0, 0)
                Ellipse:
                    pos: self.pos
                    size: self.size
            text: "!" if root.finished else "?"
            size_hint: 0.1, 1

        TextInput:
            text: ""
            size_hint: 0.9, 1
            on_text: root.check_answer(*args)
