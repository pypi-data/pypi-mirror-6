<html tal:replace="structure context/manage_page_header"/>

   <span tal:replace="structure context/manage_tabs"/>
     
   <form action="">
       <span class="form-label">Number Periods</span>
       <input  class="form-element" type="text" name="periods_to_report:int" size="3" value=""
              tal:attributes="value request/periods_to_report | python: len(context.periodEnds())"/>
       <input  class="form-element" type="submit" value=" Go "/>
   </form>    

   <tal:reports define="periods_to_report request/periods_to_report | python: len(context.periodEnds())">
      <div metal:use-macro="context/blreporting_macros/macros/revenue-statement-multi"/>
   </tal:reports>

<html tal:replace="structure context/manage_page_footer"/>





