<vc xmlns:bind="bind">
    <hc>
        <button id="add-job" text="Add job" icon="plus" />
        <button id="refresh" text="Refresh" icon="refresh" />
    </hc>

    <body>
        <pad>
            <label text="Jobs" style="bold" />

            <bind:collection bind="jobs" id="jobs">
                <dt bind="__items">
                    <dtr>
                        <dth text="#" /> 
                        <dth text="Name" /> 
                        <dth text="Tape Group" /> 
                        <dth text="Destination" /> 
                        <dth text="Type" /> 
                        <dth text="Status" /> 
                        <dth text="Started" /> 
                        <dth text="Duration" /> 
                        <dth text="Progress (GB)" /> 
                        <dth text="Control" /> 
                    </dtr>
                </dt>

                <bind:template>
                    <dtr>
                        <dtd>
                            <label bind="id" />
                        </dtd>
                        <dtd>
                            <label bind="name" />
                        </dtd>
                        <dtd>
                            <label bind="group" />
                        </dtd>
                        <dtd>
                            <label bind="destination" />
                        </dtd>
                        <dtd>
                            <label bind="type" />
                        </dtd>
                        <dtd>
                            <label bind="status" />
                        </dtd>
                        <dtd>
                            <label bind="start" />
                        </dtd>
                        <dtd>
                            <label bind="duration" />
                        </dtd>
                        <dtd>
                            <hc>
                                <progressbar width="50" bind="progress" style="green" />
                                <label bind="copied" />
                                <label text="/" />
                                <label bind="total" />
                            </hc>
                        </dtd>
                        <dtd width="1"> 
                            <hc>
                                <tooltip text="Log">
                                    <button id="log" icon="reorder" style="mini" />
                                </tooltip>
                                <tooltip text="File list">
                                    <button id="files" icon="list" style="mini" />
                                </tooltip>
                                <tooltip text="Resume">
                                    <button id="resume" icon="play" style="mini" />
                                </tooltip>
                                <tooltip text="Pause">
                                    <button id="pause" icon="pause" style="mini" />
                                </tooltip>
                                <tooltip text="Cancel">
                                    <button id="cancel" icon="trash" style="mini" />
                                </tooltip>
                            </hc>
                        </dtd>
                    </dtr>
                </bind:template>
            </bind:collection>
        </pad>

        <dialog id="add-dialog" visible="False"
            buttons="[
                {'text':'Save', 'id':'save'},
                {'text':'Cancel', 'id':'cancel'},
            ]">
            <pad>
                <vc>
                    <label style="bold" text="Creating a job" />
                    <bind:collection bind="source">
                        <dt bind="__items">
                            <dtr>
                                <dth text="Source" />
                                <dth />
                            </dtr>
                        </dt>

                        <bind:template>
                            <dtr>
                                <dtd>
                                    <label bind="path" />
                                </dtd>
                                <dtd width="1">
                                    <button icon="trash" style="mini" bind="__delete" />
                                </dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>

                    <hc>
                        <button id="add-source-dir" text="Directory" icon="plus" />
                        <button id="add-source-file" text="File" icon="plus" />
                    </hc>

                    <formline text="Name">
                        <textbox bind="name" />
                    </formline>

                    <formline text="Destination 1">
                        <textbox bind="destination" />
                    </formline>

                    <formline text="Destination 2">
                        <textbox bind="destination2" />
                    </formline>

                    <formline text="Tape Group 1">
                        <dropdown id="group" bind="group" />
                    </formline>

                    <formline text="Tape Group 2">
                        <dropdown id="group2" bind="group2" />
                    </formline>

                    <formline>
                        <vc>
                            <checkbox bind="export" text="Export tape" />
                            <checkbox bind="export2" text="Export tape 2" />
                            <checkbox bind="delete_source" text="Delete source" />
                        </vc>
                    </formline>
                </vc>
            </pad>
        </dialog>

        <openfiledialog id="add-file-dialog" visible="False" root="/mnt" />
        <opendirdialog id="add-dir-dialog" visible="False" root="/mnt" />

        <dialog id="file-list-dialog" visible="False">
            <label style="bold" text="Source list" />
            <codearea id="list" width="540" height="500" />
        </dialog>
    </body>
</vc>
