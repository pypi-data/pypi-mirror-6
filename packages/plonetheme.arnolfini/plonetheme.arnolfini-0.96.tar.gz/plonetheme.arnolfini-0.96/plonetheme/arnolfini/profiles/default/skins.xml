<?xml version="1.0"?>
<!-- This file holds the setup configuration for the portal_skins tool -->

<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Arnolfini Theme">

 <object name="plonetheme_arnolfini_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.arnolfini:skins/plonetheme_arnolfini_custom_images"/>
 <object name="plonetheme_arnolfini_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.arnolfini:skins/plonetheme_arnolfini_custom_templates"/>
 <object name="plonetheme_arnolfini_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.arnolfini:skins/plonetheme_arnolfini_styles"/>

 <skin-path name="Arnolfini Theme" based-on="INTK Base">
  <layer name="plonetheme_arnolfini_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_arnolfini_custom_templates"
     insert-after="plonetheme_arnolfini_custom_images"/>
  <layer name="plonetheme_arnolfini_styles"
     insert-after="plonetheme_arnolfini_custom_templates"/>
 </skin-path>

</object>
