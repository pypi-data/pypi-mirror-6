<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">

<body>
 
    <div metal:fill-slot="main"
         tal:define="errors options/state/getErrors;
                     utool context/@@plone_portal_state/portal_url;
                     lockable python:hasattr(context, 'wl_isLocked');
                     isLocked python:lockable and context.wl_isLocked();">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="context/Title | context/getId"/></h1>

      <form name="edit_form"  action="."  method="post"
            tal:attributes="action string:${context/getId}/${template/getId}" >

        <fieldset>

          <legend i18n:translate="legend_document_details">Instrument Details</legend>


          <div class="field"
               tal:condition="python:site_properties.getProperty('visible_ids', None)"
               tal:define="error errors/id | nothing;
                           id python:request.get('id', here.show_id() and here.getId() or '');"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="id" i18n:translate="label_short_name">Short Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Short Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

          <input type="hidden"
                 name="id"
                 tal:condition="python:not site_properties.getProperty('visible_ids', '')"
                 tal:attributes="value python:request.get('id', here.getId())"
                 />


          </div>

          <div class="field"
               tal:define="error errors/title|nothing;
                           Title request/title | context/Title;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="title" i18n:translate="label_title">Title</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text" id="title" name="title" value="" size="40"
                    tal:attributes="value Title;"/>

          </div>


          <div class="field"
               tal:define="error errors/Description|nothing;
                           Description request/description | context/Description;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="title" i18n:translate="label_title">Description</label>

            <div tal:content="error">Validation error output</div>

            <textarea id="description" rows="3" name="description"  
                      tal:content="Description" />

          </div>


          <div class="field"
               tal:define="error errors/face|nothing;
                           Face request/face | context/face;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label>Face Value</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_face">
                  The face value of the share
            </div>


            <input type="text" id="face:currency" name="face" value="" size="12"
                    tal:attributes="value Face;"/>

          </div>

          <div class="field"
               tal:define="error errors/allocated|nothing;
                           Allocation request/allocated | context/allocated;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label>Allocation</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_allocated">
                  The number of shares assignable to shareholders
            </div>


            <input type="text" id="allocated:long" name="allocated" value="" size="12"
                    tal:attributes="value Allocation;"/>

          </div>


          <div class="field"
               tal:define="error errors/issue_date|nothing;
                           Issue_Date request/issue_date | context/issue_date;
                           inputvalue Issue_Date;
                           formname string:edit_form;
                           show_hm python: False;
                           inputname string:issue_date;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label>Issue Date</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_issue_date">
                  The date of issue of this class of shares
            </div>


            <span metal:use-macro="here/calendar_macros/macros/calendarDatePickerBox"/>

          </div>

          <div class="field"
               tal:define="error errors/voting_class|nothing;
                           Voting_Class request/voting_class | context/voting_class;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label>Voting Class</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_voting_class">
                  For holders to vote at General Meetings, you need to assign a voting class tag.  Shares
                  of different classes can have the same voting rights by having the same voting class.
            </div>

            <input type="text" id="voting_class" name="voting_class" value="" size="12"
                    tal:attributes="value Voting_Class;"/>

          </div>


          <div class="formControls">

            <img src="" class="context"
                   tal:define="portal context/portal_url/getPortalObject; locked portal/lock_icon.png;"
                   tal:condition="isLocked"
                   tal:replace="structure python:locked.tag(title='This item is locked')"
                   alt="Object locked"
                   i18n:attributes="alt"/>

            <input class="context"
                   
                   type="submit"
                   name="form.button.Save"
                   value="Save"
                   i18n:attributes="value"
                   tal:attributes="disabled python:isLocked and 'disabled' or None;" />

          </div>
        </fieldset>

        <input type="hidden" name="form.submitted" value="1" />

      </form>

    </div>
 
</body>
</html>
