<div class="button-container" style="margin-bottom:42px;text-align:center;">
  <div class="btn-group" style="float:none;">
    {% raw %}
    <a ng-repeat="item in items" class="btn btn-info {{item.active}}"
      ng-click="changeChart($event)" href="#{{item.name}}">
      <i style="pointer-events:none;" class="{{item.icon}}"></i>
    </a>
    {% endraw %}
  </div>
</div>
<div class="well chart-container polaris-well" style="position:relative;">
  <chart class="chart" parent-scope="this"
    {% raw %}
    base-url="{{baseUrl}}" type="{{type}}" filter="chartFilter"
    {% endraw %}
    uuid="{{ uuid }}" cf="{{ cf }}"></chart>
</div>
