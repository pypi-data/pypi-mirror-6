<tal:if condition="view/value">
	<div tal:attributes="class string:location ${view/klass}" i18n:domain="ztfy.geoportal">
		<span i18n:translate="">Longitude:</span> <tal:var content="view/longitude" />&nbsp;&nbsp;&dash;&nbsp;
		<span i18n:translate="">Latitude:</span> <tal:var content="view/latitude" />
	</div>
</tal:if>
<span tal:condition="not:view/value">--</span>