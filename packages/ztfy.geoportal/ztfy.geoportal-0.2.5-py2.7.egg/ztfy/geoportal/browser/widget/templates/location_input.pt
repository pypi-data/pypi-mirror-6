<div tal:attributes="class string:location ${view/klass}" i18n:domain="ztfy.geoportal">
	<label tal:attributes="for view/longitude_id" i18n:translate="">Longitude:</label>
	<input type="text" tal:attributes="id view/longitude_id;
									   name view/longitude_name;
									   value view/longitude;" />
	<label tal:attributes="for view/latitude_id" i18n:translate="">Latitude:</label>
	<input type="text" tal:attributes="id view/latitude_id;
									   name view/latitude_name;
									   value view/latitude;" />
	<a title="Locate through GeoPortal map" tal:attributes="href string:;" class="hint nohide" data-ztfy-hint-gravity="nw" data-ztfy-hint-offset="3" i18n:attributes="title">
		<img src="/--static--/ztfy.geoportal/img/pin.png" style="cursor: pointer;"
			 tal:attributes="onclick string:return $$.ZTFY.geoportal.open('${view/prefix}', '${context/@@absolute_url}/@@geoportal_location.html')"/>
	</a>
</div>