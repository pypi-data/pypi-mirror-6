<metal:def define-macro="footer">
  <p class="footer"
    tal:condition="python:options['show_footer']=='1'">
    <img tal:replace="structure context/globals/feed-icon-14x14.png/tag | nothing" />
    <a class="image" tal:attributes="href python:viewerobj.absolute_url() + '/rss.xml'"
      title="Get the source...."
      i18n:attributes="title;value">
      <tal:i18n i18n:translate="">Subscribe to feed</tal:i18n>
    </a>
  </p>
</metal:def>
