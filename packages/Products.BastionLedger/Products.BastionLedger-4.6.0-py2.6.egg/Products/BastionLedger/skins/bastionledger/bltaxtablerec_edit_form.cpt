<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">


<body>
   <div metal:fill-slot="main"
        tal:define="errors options/state/getErrors;
                   utool context/@@plone_portal_state/portal_url;">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="context/Title | context/getId"/></h1>

      <br/>

      <form name="edit_form" action="" method="post"
            tal:attributes="action string:${context/getId}/${template/getId}">


          <div class="field"
               tal:condition="python:site_properties.getProperty('visible_ids', None)"
               tal:define="error errors/id | nothing;
                           id python:request.get('id', here.show_id() and here.getId() or '');"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="id" i18n:translate="label_short_name">Short Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Short Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

          <input type="hidden"
                 name="id"
                 tal:condition="python:not site_properties.getProperty('visible_ids', '')"
                 tal:attributes="value python:request.get('id', here.getId())"
                 />


          </div>


             <div tal:define="error errors/effective|nothing;
                              Effective request/effective | context/effective;
	                      inputvalue Effective;
                              formname string:edit_form;
                              show_hm python: False;
                              inputname string:effective;"
                  tal:attributes="class python:error and 'field error' or 'field'">

                 <label for="effective" i18n:translate="label_effective">Effective</label>

                 <span class="fieldRequired" title="Required"
                       i18n:attributes="effective effective_required;"
                       i18n:translate="label_required">(Required)</span>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp" i18n:translate="help_effective">
                    The date from which this rate applies.
                 </div>

                 <span metal:use-macro="here/calendar_macros/macros/calendarDatePickerBox"/>
             </div>

             <div tal:define="error errors/rate|nothing;
                              Rate request/rate | context/rate"
                              tal:attributes="class python:error and 'field error' or 'field'">

                 <label for="rate" 
                        i18n:translate="label_rate">Rate</label>

                 <span class="fieldRequired" title="Required"
                       i18n:attributes="rate rate_required;"
                       i18n:translate="label_required">(Required)</span>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp" i18n:translate="help_rate">
                    The tax rate (decimal - ie percentage divided by 100)
                 </div>

                 <input type="text" id="rate" name="rate:float" 
                        value="" size="5"  
                        tal:attributes="value Rate;"/>
             </div>

             <div tal:define="error errors/code|nothing;
                              Code request/code | context/code"
                              tal:attributes="class python:error and 'field error' or 'field'">

                 <label for="rate" 
                        i18n:translate="label_code">Code</label>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp" i18n:translate="help_code">
                    The tax code
                 </div>

                 <input type="text" id="code" name="code" 
                        value="" size="5"  
                        tal:attributes="value Code; "/>
             </div>

         <tal:block tal:repeat="d context/dimensions">
            <div tal:define="error python: errors.get(d,'')"
                 tal:attributes="class python:error and 'field error' or 'field'">

                 <label tal:content="d/capitalize"/>

                 <span class="fieldRequired" title="Required"
                       i18n:translate="label_required">(Required)</span>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp" tal:content="python: context.fieldType(d)"/>

                 <input type="text" id="kw" name="kw"
                        tal:attributes="name python: 'kw.%s:%s:record' % (d, context.fieldType(d));
                                        value python: getattr(context, d, '')" />
             </div>
         </tal:block>

         <div class="formControls" colspan="2">
               <input class="context"  type="submit" name="form.button.Edit"
                      value="Edit" i18n:attributes="Edit" />
         </div>

         <input type="hidden" name="form.submitted" value="1"/>
      </form>
 
  </div>
 
</body>
</html>
