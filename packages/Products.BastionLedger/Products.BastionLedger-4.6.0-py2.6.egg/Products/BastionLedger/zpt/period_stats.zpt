<html tal:replace="structure context/manage_page_header"/>

    <span tal:replace="structure context/manage_tabs"/>

    <p class="form-help">This page collates, compares and contrasts period-end statistics 
        so that you can easily verify the information displayed in your reports and accounts 
        moving forward.</p>

    <table cellpadding="2" cellspacing="0" 
           tal:define="ledger nocall: context/Ledger;
                       p context/prevPeriod; 
                       n context/nextPeriod">
        <tr>
          <td align="left" colspan="4">
              <a tal:condition="nocall: p"
                 tal:attributes="href string:${p/absolute_url}/manage_statistics">&larr;prev</a>
          </td>
          <td align="right">
              <a tal:condition="nocall: n"
                 tal:attributes="href string:${n/absolute_url}/manage_statistics">next&rarr;</a>
          </td>
        </tr>
        <tr>
          <td/>
          <td class="form-label" colspan="2" align="center">Reported</td>
          <td class="form-label" colspan="2" align="center">Computed</td>
        </tr>
        <tr>
           <td class="form-label">Gross Profit</td>
           <td class="list-item" colspan="2" align="right" tal:content="context/gross_profit"/>
           <td class="list-item" colspan="2" align="center">
              -
           </td>
        </tr>
        <tr>
           <td class="form-label">Losses Recognised</td>
           <td class="list-item" colspan="2" align="right" tal:content="context/losses_recognised"/>
           <td class="list-item" colspan="2" align="right">
              <i tal:content="context/lossesRecognised"/>
           </td>
        </tr>
        <tr>
           <td class="form-label">Losses Forward</td>
           <td class="list-item" colspan="2" align="right" tal:content="context/losses_forward"/>
           <td class="list-item" colspan="2" align="right">
              <i tal:content="context/lossesForward"/>
           </td>
        </tr>
        <tr>
           <td class="form-label">Company Tax</td>
           <td class="list-item" colspan="2" align="right" tal:content="context/company_tax"/>
           <td class="list-item" colspan="2" align="right">
              <i tal:content="context/companyTax"/>
           </td>
        </tr>
        <tr>
           <td class="form-label">Net Profit</td>
           <td class="list-item" colspan="2" align="right" tal:content="context/net_profit"/>
           <td class="list-item" colspan="2" align="right">
               <i tal:content="context/netProfit"/>
           </td>
        </tr>
        <tr><td colspan="5">&nbsp;</td></tr>
        <tr><td colspan="5">&nbsp;</td></tr>
        <tr>
            <td/>
            <td class="form-label" colspan="2" colspan="2" align="center">Closing</td>
            <td class="form-label" colspan="2" colspan="2" align="center">Reported</td>
        </tr>
        <tr>
            <td class="form-label">Assets</td>
            <td/>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('balance', ('Asset',))"/>
            <td/>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('reporting_balance', ('Asset',))"/>
            <td/>
        </tr>       
        <tr>
            <td class="form-label">Liabilities</td>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('balance', ('Liability',))"/>
            <td/>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('reporting_balance', ('Liability',))"/>
            <td/>
        </tr>       
        <tr>
            <td class="form-label">Proprietorship</td>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('balance', ('Proprietorship',))"/>
            <td/>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('reporting_balance', ('Proprietorship',))"/>
            <td/>
        </tr>       
        <tr>
            <td/>
            <td/>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('balance', ('Liability', 'Proprietorship',))"/>
            <td/>
            <td class="list-item" align="right"
                tal:content="python: ledger.sum('reporting_balance', ('Liability', 'Proprietorship',))"/>
        </tr>       
        <tr>
            <td/>
            <td/>
            <td class="list-item" align="right">
               <b tal:content="python: ledger.sum('balance', ('Asset', 'Liability', 'Proprietorship',))"/>
            </td>
            <td/>
            <td class="list-item" align="right">
               <b tal:content="python: ledger.sum('reporting_balance', ('Asset', 'Liability', 'Proprietorship',))"/>
            </td>
        </tr>       
    </table>

<html tal:replace="structure context/manage_page_footer"/>





