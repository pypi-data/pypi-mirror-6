<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">
 
<body>
  <div metal:fill-slot="main"
       tal:define="errors options/state/getErrors;
                   utool context/@@plone_portal_state/portal_url;">
      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">Time period configuration</h1>

      <form name="edit" action="" method="post"
            tal:attributes="action string:${context/getId}/${template/getId}">

          <div class="field"
               tal:condition="python:site_properties.getProperty('visible_ids', None)"
               tal:define="error errors/id | nothing;
                           id python:request.get('id', here.show_id() and here.getId() or '');"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="id" i18n:translate="label_short_name">Short Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Short Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

          <input type="hidden"
                 name="id"
                 tal:condition="python:not site_properties.getProperty('visible_ids', '')"
                 tal:attributes="value python:request.get('id', here.getId())"
                 />


          </div>


            <div tal:define="error errors/title|nothing;
                 Title request/title | context/Title"
                 tal:attributes="class python:error and 'field error' or 'field'">

               <label for="title" 
                      i18n:translate="label_title">Title</label>

               <span class="fieldRequired" title="Required"
                     i18n:attributes="title"
                     i18n:translate="label_required">(Required)</span>

               <div tal:content="error">Validation error output</div>

               <input type="text" id="title" name="title" value="" size="50"
                       tal:attributes="value Title;"/>
            </div>
 
            <div tal:define="error errors/ratio|nothing;
                             ratio request/ratio | context/ratio"
                 tal:attributes="class python:error and 'field error' or 'field'">

               <label for="ratio" 
                      i18n:translate="label_ratio">Ratio</label>

               <span class="fieldRequired" title="Required"
                     i18n:attributes="title"
                     i18n:translate="label_required">(Required)</span>

               <div tal:content="error">Validation error output</div>

               <div class="formHelp" i18n:translate="help_ratio">
                    The ordering/weighting of the slot
               </div>

               <input type="text" name="ratio" size="4"
                      tal:attributes="value ratio;"/>

             </div>

            <div tal:define="error errors/min_hrs|nothing;
                             min_hrs request/min_hrs | context/min_hrs"
                 tal:attributes="class python:error and 'field error' or 'field'">

               <label for="min_hrs" 
                      i18n:translate="label_min_hrs">Min Hours</label>

               <span class="fieldRequired" title="Required"
                     i18n:attributes="title"
                     i18n:translate="label_required">(Required)</span>

               <div tal:content="error">Validation error output</div>

               <div class="formHelp" i18n:translate="help_min_hrs">
                    The minimum required hours in this period
               </div>

               <input type="text" name="min_hrs" size="4"
                      tal:attributes="value min_hrs;"/>

             </div>

            <div tal:define="error errors/max_hrs|nothing;
                             max_hrs request/max_hrs | context/max_hrs"
                 tal:attributes="class python:error and 'field error' or 'field'">

               <label for="max_hrs" 
                      i18n:translate="label_max_hrs">Max Hours</label>

               <span class="fieldRequired" title="Required"
                     i18n:attributes="title"
                     i18n:translate="label_required">(Required)</span>

               <div tal:content="error">Validation error output</div>

               <div class="formHelp" i18n:translate="help_max_hrs">
                    The maximum number of hours in this period
               </div>

               <input type="text" name="max_hrs" size="4" 
                      tal:attributes="value max_hrs;"/>

             </div>

             <tal:block tal:repeat="dow context/select_day_of_week">
                 <div tal:define="error python: errors.get(dow, None);
                                 day python: request.get(dow, None)"
                      tal:attributes="class python:error and 'field error' or 'field'">

                     <label for="dow" tal:content="dow"/>

                     <span class="fieldRequired" title="Required"
                           i18n:attributes="title"
                           i18n:translate="label_required">(Required)</span>

                     <div tal:content="error">Validation error output</div>

                     <input type="text" name="defaults:list" size="4"
                            tal:attributes="value python:context.defaults[repeat['dow'].index];"/>

                  </div>
            </tal:block>

            <input type="hidden" name="form.submitted" value="1"/>

            <input class="context" type="submit" name="form.button.Edit" value=" Edit "/>


      </form>


  </div>
 
</body>
</html>
