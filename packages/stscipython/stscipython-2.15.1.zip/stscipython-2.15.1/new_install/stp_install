#!/bin/sh

set -x
args="$*"
export args

echo ARGS=$args

. new_install/stp_tools

while read line
do
	echo XXXXXXXX
	eval `echo $line | split_line `
	echo XXXXXXXX
	echo pkg $pkg
	echo ''
	(
	    cd $pkg
		pwd
		#pip install --no-deps -i http://example.com ./$pkg
		python setup.py install $args
	)
	if [ $? != 0 ]
	then
		echo install failed
		exit 1
	fi
	echo ''
done

exit 0

