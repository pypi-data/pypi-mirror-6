<vc>
    <body>
        <pad id="resolv-config">
            <bind:collection bind="items" id="items">
                <vc>
                    <dt bind="__items" />
                    <bind:template>
                        <collapserow>
                            <box>
                                <right>
                                    <button bind="__delete" icon="remove" style="icon" warning="{Confirm deletion}" />
                                </right>
                                <hc>
                                    <icon icon="globe" />
                                    <label bind="name" />
                                    <label bind="value" />
                                </hc>   
                            </box>
                            
                            <pad>
                                <vc>
                                    <formline text="{Type}">
                                        <dropdown id="name-box" bind="name" />
                                    </formline>
                                    <formline text="{Value}">
                                        <textbox bind="value" />
                                    </formline>
                                </vc>
                            </pad>
                        </collapserow>
                    </bind:template>

                    <button bind="__add" icon="plus" text="{Create}" />
                </vc>
            </bind:collection>
        </pad> 
    </body>
    
    <button id="save" text="{Save}" />
</vc>