#!/usr/bin/env python
# -*- coding: utf-8 -*-

import sys
from isbntools import meta


FORMATR = 'ISBN-13: %s\nTitle: %s\nAuthors: %s\nPublisher: %s\nYear: %s\n'


def usage():
    print('Usage: isbn_meta ISBN')


if __name__ == "__main__":
    try:
        r = meta(sys.argv[1])
        sys.stdout.write(FORMATR % (r['ISBN-13'], r['Title'], r['Authors'],
                                    r['Publisher'], r['Year']))
    except:
        usage
