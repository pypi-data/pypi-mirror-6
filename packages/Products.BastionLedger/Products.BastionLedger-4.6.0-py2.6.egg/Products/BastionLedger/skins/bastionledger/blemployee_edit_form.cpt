<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">
 
<body>
 
    <div metal:fill-slot="main"
         tal:define="errors options/state/getErrors;
                     member context/@@plone_portal_state/member;
                     editor python:member.getProperty('wysiwyg_editor',None);
                     utool context/@@plone_portal_state/portal_url;
                     wysiwyg python:editor and editor!=None and 'editor' or 'None';
                     lockable python:hasattr(context, 'wl_isLocked');
                     isLocked python:lockable and context.wl_isLocked();">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="context/prettyTitle"/></h1>

      <form name="edit_form"  action="."  method="post"  enctype="multipart/form-data"
            tal:attributes="action string:${context/getId}/${template/getId}" >

        <fieldset>

          <legend i18n:translate="legend_document_details">Account Details</legend>

          <div class="field"
               tal:define="error errors/title|nothing;
                           Title request/title | context/Title;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="title" i18n:translate="label_title">Title</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="title"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <input type="text" id="title" name="title" value="" size="40"
                    tal:attributes="value Title;"/>

          </div>


          <div class="field"
               tal:define="error errors/address|nothing;
                           Address request/address | context/address;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label>Address</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="number"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>

            <textarea id="address" name="address:text" rows="4" cols="50"
                    tal:content="Address" />

          </div>

          <div class="field"
               tal:define="error errors/phone|nothing;
                           Phone request/phone | context/phone;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="phone" i18n:translate="label_phone">Phone</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="phone"
                  i18n:translate="label_required">(Required)</span>

            <div tal:content="error">Validation error output</div>
            <input type="text" id="phone" name="phone" value="" size="15"
                    tal:attributes="value Phone;"/>

           </div>

          <div class="field"
               tal:define="error errors/tax_number|nothing;
                           Tax_Number request/tax_number | context/tax_number;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="tax_number" i18n:translate="label_tax_number">Tax Number</label>

            <span class="fieldRequired" title="Required"
                  i18n:attributes="tax_number"
                  i18n:translate="label_required">(Required)</span>
            <div class="formHelp" i18n:translate="help_tax_number">
                   The number your taxation authority has assigned you for your dealings with them.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text" name="tax_number" value=""
                         tal:attributes="value Tax_Number"/>
           </div>

          <div class="field"
               tal:define="error errors/bank_account|nothing;
                           Bank_Account request/bank_account | context/bank_account;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="bank_account" i18n:translate="label_bank_account">Bank Account</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_shortname">
                   Arbitrarily form logical associations between accounts by assigning
                   them nominated bank_account.
            </div>
            <input type="text" name="bank_account" value="" size="30"
                         tal:attributes="value Bank_Account"/>

           </div>

          <div class="field"
               tal:define="error errors/date_of_birth|nothing;
                           Date_Of_Birth request/date_of_birth | context/date_of_birth;
                           inputvalue Date_Of_Birth;
                           formname string:edit_form;
                           show_hm python: False;
                           inputname string:date_of_birth;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="date_of_birth" i18n:translate="label_date_of_birth">Date of Birth</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_dob">
                  The date you were born (yyyy/mm/dd).
            </div>
            <span metal:use-macro="here/calendar_macros/macros/calendarDatePickerBox"/>
           </div>

          <div class="field"
               tal:define="error errors/email|nothing;
                           Email request/email | context/email;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="email" i18n:translate="label_email">Email Address</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_shortname">
                   Your email address for notification purposes.
            </div>
            <input type="text" name="email" value="" size="30"
                         tal:attributes="value Email"/>

           </div>

          <div class="field"
               tal:define="error errors/super_number|nothing;
                           Super_Number request/super_number | context/super_number;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="super_number" i18n:translate="label_super_number">Super Fund Number</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_shortname">
                   Your superannuation fund number as defined by your super fund.
            </div>
            <input type="text" name="super_number" value="" size="30"
                         tal:attributes="value Super_Number"/>

           </div>

          <div class="field"
               tal:define="error errors/super_details|nothing;
                           Super_Details request/super_details | context/super_details;"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="super_details" i18n:translate="label_super_details">Super Fund Details</label>

            <div tal:content="error">Validation error output</div>

            <div class="formHelp" i18n:translate="help_shortname">
                   Your superannuation fund contact details so we can make appropriate credits.
            </div>
            <textarea  name="super_details:text"
                         tal:content="Super_Details"/>

           </div>

          <div class="formControls"
               tal:define="process_creation request/process_creation|nothing;">

            <img src="" class="context"
                   tal:define="portal context/portal_url/getPortalObject; locked portal/lock_icon.png;"
                   tal:condition="isLocked"
                   tal:replace="structure python:locked.tag(title='This item is locked')"
                   alt="Object locked"
                   i18n:attributes="alt"/>

            <input class="context"
                   
                   type="submit"
                   name="form.button.Edit"
                   value="Edit"
                   i18n:attributes="value"
                   tal:attributes="disabled python:isLocked and 'disabled' or None;" />

          </div>
        </fieldset>

        <input type="hidden" name="form.submitted" value="1" />

      </form>

    </div>
 
</body>
</html>
