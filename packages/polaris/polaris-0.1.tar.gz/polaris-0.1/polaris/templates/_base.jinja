<!DOCTYPE html>
<html ng-app="polaris">
  <head>
    {% block css %}
    <link rel="stylesheet" href="{{ cdn_url_for('pace-theme-minimal.css') }}">
    <link rel="stylesheet" href="{{ cdn_url_for('font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ cdn_url_for('bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ cdn_url_for('flat-ui.css') }}">
    <link rel="stylesheet" href="{{ cdn_url_for('polaris.css') }}">
    {% endblock css %}

    {% block script %}
    <script src="{{ cdn_url_for('pace.min.js') }}"></script>
    <script src="{{ cdn_url_for('jquery.min.js') }}"></script>
    <script src="{{ cdn_url_for('bootstrap.min.js') }}"></script>
    <script src="{{ cdn_url_for('angular.js') }}"></script>
    <script src="{{ cdn_url_for('URI.min.js') }}"></script>
    {% endblock script%}

    <meta charset="utf-8">
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <title>{% block title %}Polaris{% endblock title %}</title>
    {% block head %}{% endblock head%}
  </head>

  {% block body %}{% endblock body%}
</html>
