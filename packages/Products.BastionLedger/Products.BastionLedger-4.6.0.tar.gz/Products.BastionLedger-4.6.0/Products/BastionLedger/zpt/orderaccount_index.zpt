<html tal:replace="structure context/manage_page_header"
      tal:define="global entries container/entries"/>

       <table border="0" cellpadding="2" cellspacing="2" width="100%">
           <tr><td class="form-label" align="left" tal:content="context/title"/>
               <td class="form-label" align="right" tal:content="python: DateTime().strftime('%d %B %Y')"/>
           </tr>
           <tr><td>&nbsp;</td></tr>
           <tr><td>&nbsp;</td></tr>
       </table>
       <table border="0" cellpadding="2" cellspacing="0" width="100%" tal:condition="entries">
           <tr class="list-header">
               <td width="5%"  class="list-item">Type</td>
               <td width="20%" class="list-item">Reference</td>
               <td width="20%" class="list-item">Date</td>
               <td width="30%" class="list-item">Description</td>
               <td width="10%" class="list-item" align="right">Debit</td>
               <td width="10%" class="list-item" align="right">Credit</td>
     	       <td width="16"  class="list-item">&nbsp</td>
           </tr>
           <tr tal:repeat="item entries">
               <td class="list-item">
                   <img src="" tal:attributes="src python:'%s/%s' % (item[1].absolute_url(),item[1].icon)"/>
               </td>
               <td class="list-item" tal:define="ref python: item[1].reference()">
                   <a href="" tal:condition="python: hasattr(ref, 'meta_type')"
                              tal:attributes="href python: '%s/manage_workspace' % ref.absolute_url()"  
                              tal:content="python: ref.getId()"/>
                   <span tal:condition="python: not hasattr(ref, 'meta_type')" tal:content="ref"/>
               </td>
               <td class="list-item" tal:content="python:item[1].effective().strftime('%d %b %Y')"
                   tal:on-error="string:"/>
               <td class="list-item" tal:content="python: item[1].title"/>
               <span tal:condition="python: item[1].isDebit()" tal:omit-tag="">
                  <td class="list-item" align="right" tal:content="python: item[1].absAmount()"/>
                  <td>&nbsp;</td>
               </span>
               <span tal:condition="python: not item[1].isDebit()" tal:omit-tag="">
                  <td>&nbsp;</td>
                  <td class="list-item" align="right" tal:content="python: item[1].absAmount()"/>
               </span>
               <td>&nbsp;</td>
           </tr>
           <tr class="list-header">
               <td class="form-label" colspan="4" align="right">Balance</td>
               <td tal:condition="python: context.balance > 0">&nbsp;</td>
               <td class="form-label" align="right" tal:content="context/balance"/>
               <td tal:condition="python: context.balance <= 0">&nbsp;</td>
               <td>&nbsp;</td>
           </tr>
	   <tr><td colspan="6">&nbsp;</td>
	   <tr><td colspan="6">&nbsp;</td>
	   <tr><td colspan="6">&nbsp;</td>
	   <tr><td colspan="6">&nbsp;</td>
           <tr>
               <td colspan="6" width="100%">
                  <img src="" tal:attributes="src string:${context/absolute_url}/${context/icon}">
                  <a tal:attributes="href python: '%s/manage_workspace' % context.absolute_url()"
                     href="" class="form-label">Manage your account online context</a>
               </td>
           </tr>
       </table>

<html tal:replace="structure context/manage_page_footer"/>
