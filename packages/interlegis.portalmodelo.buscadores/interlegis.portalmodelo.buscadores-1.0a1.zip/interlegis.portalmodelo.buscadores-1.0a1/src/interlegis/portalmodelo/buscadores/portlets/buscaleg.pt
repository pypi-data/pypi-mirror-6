<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="pt_BR"
      tal:omit-tag=""
      i18n:domain="plone">

<dl class="portlet portletBuscaLeg">

  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    Buscar no <a title="Buscador Legislativo" href="http://www.lexml.gov.br/">Buscador Legislativo</a> do Interlegis
    <span class="portletTopRight"></span>
  </dt>

  <dd class="portletContent">
    <form action="/buscaleg" method="get"
        tal:define="navigation_root_url context/@@plone_portal_state/navigation_root_url"
        tal:attributes="action string:${navigation_root_url}/buscaleg">
      <input type="text" value="" title="Busca por palavra-chave" name="keywords" />
      <input class="searchButton" type="submit" value="Search" i18n:attributes="value label_search" />
    </form>
  </dd>

  <dd class="portletItem lastItem">
    <span class="portletBottomLeft"></span>
    <span class="portletBottomRight"></span>
  </dd>
</dl>

</html>
