#:kivy 1.0.9

<ChoiceWidget>:
    orientation: "lr-tb"
    spacing: 5
    padding: 50, 10

    canvas.before:
        Color:
            rgb: .1,.1,.1
        Rectangle:
            size: self.size
            pos: self.pos

    CheckBox:
        active: root.active
        size_hint: 0.1, 1
        on_active: root.update_active(*args)


    Label:
        text: root.text
        size_hint: 0.3, 1
        halign: "left"
