#!/usr/bin/env python
from JumpScale import j
j.application.start("jpackage")
from JumpScale.baselib import cmdutils
import argparse
print "download package to blobstor"

parser = argparse.ArgumentParser()
parser.add_argument('-a', '--all', required=False, action='store_true', help='do also for dependencies (all jpackages)')
packages, args = cmdutils.getJPackage(parser)

for package in packages:
    package.download(dependencies=args.all)
j.application.stop()
