<div id="searchFilter" class="searchFilter"
     tal:condition="nocall:view/showFilter"
      i18n:domain="p01">
  <div class="heading">
    <div class="title"
         tal:content="view/selectedFilterName">Filter</div>
    <div class="status"
         tal:condition="view/filterStatus"
         tal:content="view/filterStatus">
      Status
    </div>
    <ul class="actions"
        tal:condition="nocall:view/showFilterActions">
      <li><a href="" class="j01DialogLink"
             tal:attributes="href view/saveFilterDialogURL"
             i18n:translate="">save</a></li>
      <li><a href="" class="j01DialogLink"
             tal:attributes="href view/loadFilterDialogURL"
             i18n:translate="">load</a></li>
    </ul>
  </div>
  <div id="criterionRows" >
      <div class="criteriaRow">
        <div class="addCriterion criteria">
          <div class="addCriterionName criterion">
            <label for=""
                   tal:attributes="for view/addCriterionName"
                   i18n:translate="">
              New Criterion
            </label>
          </div>
          <div class="addCriterionSelect criterion">
            <select name="" size="1"
                    tal:attributes="name view/addCriterionName">
              <option value=""
                      tal:repeat="criterion view/availableCriterionFactories"
                      tal:attributes="value criterion/name"
                      tal:content="criterion/title"> Criterion Factory Title </option>
            </select>
          </div>
          <div class="criterion">
            <div class="btnPlus">
              <input tal:replace="structure view/searchActions/addCriterion/render" />
            </div>
          </div>
        </div>
      </div>
      <tal:block tal:define="criterionRows view/criterionRows"
                 tal:condition="criterionRows">
        <tal:block repeat="row criterionRows"
                   replace="structure row/render" />
      </tal:block>
  </div>
  <div class="filterButtons">
    <input tal:replace="structure view/searchActions/searchByFilter/render" />
    <input tal:replace="structure view/searchActions/clearFilter/render" />
  </div>
</div>
