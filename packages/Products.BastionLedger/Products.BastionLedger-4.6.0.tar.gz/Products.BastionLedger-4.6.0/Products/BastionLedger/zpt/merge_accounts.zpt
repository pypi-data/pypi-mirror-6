<html tal:replace="structure context/manage_page_header"/>

     <span tal:replace="structure context/manage_tabs"/>

     <form name="mergeform" action="manage_merge" method="post"
           tal:define="ledger python: context.aq_parent">
        <select name="ids:list" size="20" multiple>
           <option tal:repeat="account python: filter(lambda x,self=context: x != self, 
                                                      ledger.accountValues(sort_on='accno'))"
                   tal:content="account/prettyTitle"
                   tal:attributes="value account/getId"/>
        </select>
        <div class="form-element">
            <input type="checkbox" name="delete" value="1" checked>Delete Acct(s)
            <input type="submit"  value="  Merge  "/>
        </div>
     </form>

<html tal:replace="structure context/manage_page_footer"/>




