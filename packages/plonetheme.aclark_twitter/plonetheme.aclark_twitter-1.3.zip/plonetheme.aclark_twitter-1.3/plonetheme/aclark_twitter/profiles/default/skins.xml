<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="aclark_twitter">

 <object name="plonetheme_aclark_twitter_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.aclark_twitter:skins/plonetheme_aclark_twitter_custom_images"/>
 <object name="plonetheme_aclark_twitter_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.aclark_twitter:skins/plonetheme_aclark_twitter_custom_templates"/>
 <object name="plonetheme_aclark_twitter_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.aclark_twitter:skins/plonetheme_aclark_twitter_styles"/>

 <skin-path name="aclark_twitter" based-on="Sunburst Theme">
  <layer name="plonetheme_aclark_twitter_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_aclark_twitter_custom_templates"
     insert-after="plonetheme_aclark_twitter_custom_images"/>
  <layer name="plonetheme_aclark_twitter_styles"
     insert-after="plonetheme_aclark_twitter_custom_templates"/>
 </skin-path>

</object>
