<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="bastionledger">

  <body>
      <span metal:define-macro="BLLedger">
          <label>Reports</label><br/>
          <select name="reports:list" multiple 
                  tal:attributes="name string:${ledgerid}.reports:list:record">
             <option value="revenue-statement" selected>Revenue Statement</option>
             <option value="balance-sheet" selected>Balance Sheet</option>
             <option value="cashflow-statement">Cashflow Statement</option>
          </select><br/>
          <label>Depreciation</label><br/>
          <select name="assetregisters:list" multiple 
                  tal:attributes="name string:${ledgerid}.assetregisters:list:record">
             <option tal:repeat="ar python: context.objectValues('BLAssetRegister')"
                     tal:content="ar/title_or_id"
                     tal:attributes="value ar/getId" selected />
          </select><br/>

      </span>

      <span metal:define-macro="BLPayroll">
         <label>Tax Certs</label>
         <input type="checkbox" name="tax_certs:boolean" value="1" checked="1"
                tal:attributes="name string:${ledgerid}.tax_certs:boolean:record"/>
      </span>

      <span metal:define-macro="FSPayroll">
         <metal:macro use-macro="context/blperiod_end_macros/macros/BLPayroll"/>
      </span>
      
 
  </body>

</html>
