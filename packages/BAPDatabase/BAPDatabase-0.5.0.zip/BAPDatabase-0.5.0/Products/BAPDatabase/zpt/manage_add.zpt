<html>
    <head>
        <title>Create new BAPDatabase application</title>
    </head>
    <body>
        <h1>Create new BAPDatabase application</h1>
        <form action="manage_add_bap">
            <div>
                <label for="id">ID</label>
                <input type="text" id="id" name="id" value="" />
            </div>
            <input type="submit" name="Create" value="Create" />

            <fieldset>
                <legend>Database connection information</legend>
                <div>
                    <label for="db_host">Database host</label>
                    <input type="text" id="db_host" name="db_host" value="localhost" />
                </div>
                <div>
                    <label for="db_port">TCP port</label>
                    <input type="text" id="db_port" name="db_port" value="3306" />
                </div>
                <div>
                    <label for="db_username">Username</label>
                    <input type="text" id="db_username" name="db_username" value="root" />
                </div>
                <div>
                    <label for="db_password">Password</label>
                    <input type="text" id="db_password" name="db_password" value="root" />
                </div>
                <div>
                    <label for="db_name">Database name</label>
                    <input type="text" id="db_name" name="db_name" value="bap" />
                </div>
            </fieldset>
        </form>
    </body>
</html>