<html tal:replace="structure context/manage_page_header"/>

     <span tal:replace="structure context/manage_tabs"/>

     <br/>

     <form id="edit-form" action="" tal:attributes="action request/URL1">
       <table border="0" cellpadding="2" cellspacing="0" width="100%"
              tal:define="entries python: context.objectValues(['BLPaySlip', 'BLReport']);"
              tal:condition="python: not request.form.has_key('id')">
           <tr class="list-header">
               <td width="16"  class="list-item">&nbsp;</td>
               <td width="25"  class="list-item">Type</td>
               <td width="30%" class="list-item">Title</td>
               <td width="15%" align="right" class="list-item">Gross</td>
               <td width="15%" align="right" class="list-item">Tax</td>
               <td width="15%" align="right" class="list-item">Net</td>
               <td width="15%" align="right" class="list-item">Year To Date</td>
     	       <td width="16"  class="list-item">&nbsp;</td>
           </tr>
           <tal:block tal:repeat="item entries">
               <tr class="row-hilite"
                   tal:attributes="class python: repeat['item'].index % 2 and 'row-normal' or 'row-hilite'">
                   <td class="list-item" width="16">
                      <input type="checkbox" name="ids:list" value="" tal:attributes="value item/getId">
                   </td>
                   <td class="list-item">
                      <a href="" tal:attributes="href string:${item/absolute_url}/manage_workspace">
                           <img border="0" src="" tal:attributes="src item/icon"/></a></td>
                   <td class="list-item">
                       <a href="" tal:attributes="href string:${item/absolute_url}/manage_workspace"
                                  tal:content="item/title_or_id"/>
                   </td>
                   <td class="list-item" align="right" nowrap>
                       <span tal:condition="python: item.meta_type=='BLPaySlip'" 
                             tal:replace="item/gross" tal:on-error="string:"/>
                   </td>
                   <td class="list-item" align="right" nowrap>
                       <span tal:condition="python: item.meta_type=='BLPaySlip'" 
                             tal:replace="item/tax" tal:on-error="string:"/>
                   </td>
                   <td class="list-item" align="right" nowrap> 
                       <span tal:condition="python: item.meta_type=='BLPaySlip'" 
                             tal:replace="item/net" tal:on-error="string:"/>
                   </td>
                   <td class="list-item" align="right" nowrap>  
                       <span tal:condition="python: item.meta_type=='BLPaySlip'" 
                             tal:replace="item/gross_to_date" tal:on-error="string:"/>
                   </td>
                   <td class="list-item">&nbsp;</td>
               </tr>
           </tal:block>
         </table>
         <input type="submit" name="manage_deletePayslips:method" value=" Delete "/>
      </form>
 
      <div tal:condition="exists: request/form/id" 
           tal:replace="structure context/blemployee_payslip"/>

<html tal:replace="structure context/manage_page_footer"/>




