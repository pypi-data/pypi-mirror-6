<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
  lang="en"
  xml:lang="en"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva"
>
<metal:use-macro use-macro="here/macro_asset_edit/macros/editor">

<metal:fill-slot fill-slot="additional_tools">

<!-- Settings FORM -->

<form method="POST"
  name="form"
  action="."
  enctype="multipart/form-data">
  <table class="listing">
    <thead>
      <tal:block replace="nothing">
        ______________ top controls row ______________
      </tal:block>
      <tr class="top-controls">
        <td colspan="2">
          <h3 i18n:translate="">
            character coding
          </h3>
        </td>
      </tr>
    </thead>
    <tbody tal:define="fields here/charset_form/get_fields">
      <tr>
        <th width="33%"
          i18n:translate="">
          aspect
        </th>
        <th i18n:translate="">
          content
        </th>
      </tr>
      <tal:repeat repeat="field fields">
        <tal:define define="iterate repeat/field/odd">
          <tr tal:attributes="class python:iterate and 'odd' or 'even'">
            <td class="designator">
              <label tal:content="structure field/title"
                tal:attributes="for field/id">
                title
              </label><span class="warning" tal:condition="field/is_required">*</span>
              <p tal:content="structure python:field.get_value('description')"
                i18n:translate="">
                description
              </p>
            </td>
            <td class="field">
              <input tal:replace="structure python:field.render_from_request(request)" />
            </td>
          </tr>
        </tal:define>
      </tal:repeat>
    </tbody>
    <tfoot>
      <tr class="controls">
        <td class="align-right"
          colspan="2">
          <input class="button"
            type="submit"
            name="charset_submit:method"
            value="set encoding"
            title="access key: alt-e"
            accesskey="e"
            i18n:attributes="title;value"
          />
        </td>
      </tr>
    </tfoot>
  </table>
</form>

  <!-- UPLOAD FORM -->

  <form method="POST"
    name="form"
    action="."
    enctype="multipart/form-data">
    <table class="listing">
      <thead>
        <tal:block replace="nothing">
          ______________ top controls row ______________
        </tal:block>
        <tr class="top-controls">
          <td colspan="2">
            <h3 i18n:translate="">
              csv source upload
            </h3>
          </td>
        </tr>
      </thead>
      <tbody tal:define="fields here/upload_form/get_fields">
        <tr>
          <th width="33%"
            i18n:translate="">
            aspect
          </th>
          <th i18n:translate="">
            content
          </th>
        </tr>
        <tal:repeat repeat="field fields">
          <tal:define define="iterate repeat/field/odd">
            <tr tal:attributes="class python:iterate and 'odd' or 'even'">
              <td class="designator">
              <label tal:content="structure field/title"
                tal:attributes="for field/id">
                title
              </label><span class="warning" tal:condition="field/is_required">*</span>
              <p tal:content="structure python:field.get_value('description')"
                i18n:translate="">
                description
              </p>
              </td>
              <td class="field">
                <input tal:replace="structure python:field.render_from_request(request)" />
              </td>
            </tr>
          </tal:define>
        </tal:repeat>
      </tbody>
      <tfoot>
        <tr class="controls">
          <td class="align-right"
            colspan="2">
            <input class="button"
              type="submit"
              name="upload_submit:method"
              value="upload"
              title="access key: alt-u"
              accesskey="u"
              i18n:attributes="title;value"
            />
          </td>
        </tr>
      </tfoot>
    </table>
  </form>

  <!-- RAW DATA FORM -->

  <form method="POST"
    name="form"
    action="."
    enctype="multipart/form-data">
    <table class="listing">
      <thead>
        <tal:block replace="nothing">
          ______________ top controls row ______________
        </tal:block>
        <tr class="top-controls">
          <td colspan="2">
            <h3 i18n:translate="">
              comma separated value data
            </h3>
          </td>
        </tr>
      </thead>
      <tbody tal:define="fields here/rawdata_form/get_fields">
        <tal:repeat repeat="field fields">
        <tal:define define="iterate repeat/field/odd">
        <tr>
          <th tal:content="structure field/title"
            i18n:translate="">
            title
          </th>
        </tr>
        <tr tal:attributes="class python:iterate and 'odd' or 'even'">
          <td class="field">
            <input tal:replace="structure python:field.render_from_request(request)" />
          </td>
        </tr>
        </tal:define>
        </tal:repeat>
      </tbody>
      <tfoot>
        <tr class="controls">
          <td class="align-right">
            <input class="button"
              type="submit"
              name="rawdata_submit:method"
              value="change data"
              title="access key: alt-c"
              accesskey="c"
              i18n:attributes="title;value"
            />
          </td>
        </tr>
      </tfoot>
    </table>
  </form>

</metal:fill-slot>

</metal:use-macro>
</html>
