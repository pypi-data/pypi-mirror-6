<?xml version="1.0"?>
<dc-workflow xmlns:i18n="http://xml.zope.org/namespaces/i18n"
             workflow_id="blpart_workflow"
             i18n:domain="bastionledger"
             title="BLPart Workflow"
             state_variable="review_state"
             initial_state="stocked">

 <permission>BastionLedger: Manage</permission>
 <permission>BastionLedger: Oversee</permission>
 <permission>BastionLedger: Operate</permission>
 <permission>Access contents information</permission>
 <permission>View</permission>
 <permission>Modify portal content</permission>
 <permission>List folder contents</permission>

 <state state_id="backordered" title="Backordered">
  <exit-transition transition_id="discontinue"/>
  <exit-transition transition_id="transit"/>
  <exit-transition transition_id="stock"/>
  <permission-map name="BastionLedger: Operate" acquired="True">
     <permission-role>Manager</permission-role>
     <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="True"/>
  <permission-map name="List portal content" acquired="True"/>
  <permission-map name="Modify portal content" acquired="True"/>
  <permission-map name="View" acquired="True"/>
 </state>

 <state state_id="discontinued" title="Discontinued">
  <exit-transition transition_id="stock"/>
  <permission-map name="BastionLedger: Operate" acquired="True">
     <permission-role>Manager</permission-role>
     <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="True"/>
  <permission-map name="List portal content" acquired="True"/>
  <permission-map name="Modify portal content" acquired="True"/>
  <permission-map name="View" acquired="True"/>
 </state>

 <state state_id="reserved" title="Reserved">
  <exit-transition transition_id="stock"/>
  <exit-transition transition_id="unstock"/>
  <permission-map name="BastionLedger: Operate" acquired="True">
     <permission-role>Manager</permission-role>
     <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="True"/>
  <permission-map name="List portal content" acquired="True"/>
  <permission-map name="Modify portal content" acquired="True"/>
  <permission-map name="View" acquired="True"/>
 </state>


 <state state_id="stocked" title="Stocked">
  <exit-transition transition_id="unstock"/>
  <exit-transition transition_id="reserve"/>
  <permission-map name="BastionLedger: Operate" acquired="True">
     <permission-role>Manager</permission-role>
     <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="True"/>
  <permission-map name="List portal content" acquired="True"/>
  <permission-map name="Modify portal content" acquired="True"/>
  <permission-map name="View" acquired="True"/>
 </state>


 <state state_id="transit" title="Transit">
  <exit-transition transition_id="backorder"/>
  <exit-transition transition_id="discontinue"/>
  <exit-transition transition_id="stock"/>
  <permission-map name="BastionLedger: Operate" acquired="True">
     <permission-role>Manager</permission-role>
     <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="True"/>
  <permission-map name="List portal content" acquired="True"/>
  <permission-map name="Modify portal content" acquired="True"/>
  <permission-map name="View" acquired="True"/>
 </state>

 <state state_id="unstocked" title="Unstocked">
  <exit-transition transition_id="backorder"/>
  <exit-transition transition_id="stock"/>
  <permission-map name="BastionLedger: Operate" acquired="True">
     <permission-role>Manager</permission-role>
     <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Access contents information" acquired="True"/>
  <permission-map name="List portal content" acquired="True"/>
  <permission-map name="Modify portal content" acquired="True"/>
  <permission-map name="View" acquired="True"/>
 </state>

<transition transition_id="backorder"
             title="Backorder"
             new_state="backordered" trigger="USER"
             before_script="" after_script="">
  <action  url="%(content_url)s/content_status_modify?workflow_action=backorder" category="workflow">Backorder</action>
  <guard>
   <guard-permission>BastionLedger: Operate</guard-permission>
  </guard>
 </transition>

<transition transition_id="discontinue"
             title="Discontinue"
             new_state="discontinued" trigger="USER"
             before_script="" after_script="">
  <action  url="%(content_url)s/content_status_modify?workflow_action=discontinue" category="workflow">Discontinue</action>
  <guard>
   <guard-permission>BastionLedger: Operate</guard-permission>
  </guard>
 </transition>

<transition transition_id="reserve"
             title="Reserve"
             new_state="reserved" trigger="USER"
             before_script="" after_script="">
  <action  url="%(content_url)s/content_status_modify?workflow_action=reserve" category="workflow">Reserve</action>
  <guard>
   <guard-permission>BastionLedger: Operate</guard-permission>
  </guard>
 </transition>

<transition transition_id="stock"
             title="Stock"
             new_state="stocked" trigger="USER"
             before_script="" after_script="">
  <action  url="%(content_url)s/content_status_modify?workflow_action=stock" category="workflow">Stock</action>
  <guard>
   <guard-permission>BastionLedger: Operate</guard-permission>
  </guard>
 </transition>

<transition transition_id="unstock"
             title="Unstock"
             new_state="unstocked" trigger="USER"
             before_script="" after_script="">
  <action  url="%(content_url)s/content_status_modify?workflow_action=unstock" category="workflow">Unstock</action>
  <guard>
   <guard-permission>BastionLedger: Operate</guard-permission>
  </guard>
 </transition>


<transition transition_id="transit"
             title="Transit"
             new_state="transit" trigger="USER"
             before_script="" after_script="">
  <action  url="%(content_url)s/content_status_modify?workflow_action=transit" category="workflow">Transit</action>
  <guard>
   <guard-permission>BastionLedger: Operate</guard-permission>
  </guard>
 </transition>

<script script_id="cancel" type="Script (Python)" 
        filename="workflows/blorder_workflow/cancel.py"/>

<script script_id="invoice" type="Script (Python)" 
        filename="workflows/blorder_workflow/invoice.py"/>

<script script_id="finish" type="Script (Python)" 
        filename="workflows/blorder_workflow/finish.py"/>

<script script_id="dispatch" type="Script (Python)" 
        filename="workflows/blorder_workflow/dispatch.py"/>

<variable variable_id="action"         for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    Previous transition
  </description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="actor"          for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    The ID of the user who performed the last transition
  </description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="comments"       for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    Comment about the last transition
  </description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description i18n:translate="">
    Provides access to workflow history
  </description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>

 <variable variable_id="time"           for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    When the previous transition was performed
  </description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>

</dc-workflow>
