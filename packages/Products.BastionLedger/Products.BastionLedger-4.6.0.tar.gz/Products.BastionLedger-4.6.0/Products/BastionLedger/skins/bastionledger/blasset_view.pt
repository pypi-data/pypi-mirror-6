<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">
 
   <metal:border fill-slot="top_slot">
    <tal:border define="dummy python:request.set('enable_border',1)" />
  </metal:border>

<body>
  <div metal:fill-slot="main"
       tal:define="utool context/@@plone_portal_state/portal_url">
      <h1 class="documentFirstHeading"><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="context/Title | context/getId"/></h1>

      <tal:byline tal:on-error="string:">
         <div tal:replace="structure provider:plone.belowcontenttitle"/>
      </tal:byline>

      <div class="label" tal:content="context/title | nothing"/>
      <div class="formHelp" tal:content="context/description | nothing"/>

      <div class="label">Purchase Date</div>
      <div class="field" tal:content="python: context.toLocalizedTime(context.purchase_date)"/>

      <div class="label">Purchase Price</div>
      <div class="field" tal:content="context/purchase_price"/>

      <div class="label">Improvement Costs</div>
      <div class="field" tal:content="context/improvement_costs"/>

      <div class="label">Tax Credits</div>
      <div class="field" tal:content="context/tax_credits"/>

      <div class="label">Relief Credits</div>
      <div class="field" tal:content="context/relief_credits"/>

      <tal:block tal:condition="context/isDisposed">
         <div class="label">Disposal Date</div>
         <div class="field" tal:content="python: context.toLocalizedTime(context.disposal_date)"/>

         <div class="label">Disposal Price</div>
         <div class="field" tal:content="context/disposal_price"/>
      </tal:block>

      <div class="label">Depreciation to Date</div>
      <div class="field" tal:content="context/depreciation_to_date"/>

      <div class="label">Depreciation Method</div>
      <div class="field" tal:content="context/depreciation_method"/>

      <div class="label">Effective Life</div>
      <div class="field" tal:content="context/effective_life"/>

      <div class="label">Last Depreciation</div>
      <div class="field" tal:content="context/last_depreciation_run"/>

      <tal:block tal:define="acct context/blAccount"
                 tal:condition="nocall: acct">
         <div class="label">Asset Account</div>
         <div class="field" tal:content="acct/prettyTitle"/>
      </tal:block>

      <div class="label">Percentage Owned</div>
      <div class="field" tal:content="context/percentage_owned"/>

      <div tal:replace="structure provider:plone.belowcontentbody">
           Document actions (print, sendto etc)
      </div>

  </div>
 
</body>
</html>
