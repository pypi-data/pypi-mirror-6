<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">

  <metal:border fill-slot="top_slot">
    <tal:border define="dummy python:request.set('enable_border',1)" />
  </metal:border>
 
<body>
  <div metal:fill-slot="main"
       tal:define="utool context/@@plone_portal_state/portal_url">
 
      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="context/Title | context/getId"/></h1>

      <form name="edit_prices" action="" method="post"
            tal:attributes="action string:${context/getId}/${template/getId}">


          <div class="field"
               tal:condition="python:site_properties.getProperty('visible_ids', None)"
               tal:define="error errors/id | nothing;
                           id python:request.get('id', here.show_id() and here.getId() or '');"
               tal:attributes="class python:error and 'field error' or 'field'">

            <label for="id" i18n:translate="label_short_name">Short Name</label>

            <div class="formHelp" i18n:translate="help_shortname">
                   Short Name is part of the item's web address.
                           For accessibility reasons, do not use spaces, upper case,
                   underscores, or special characters.
            </div>

            <div tal:content="error">Validation error output</div>

            <input type="text"
                   id="id"
                   name="id"
                   value=""
                   tal:attributes="value id"
                   />

          </div>

             <div tal:define="error errors/title|nothing;
                  Title request/title | context/Title"
                  tal:attributes="class python:error and 'field error' or 'field'">

                 <div class="label">Title</div>

                 <div tal:content="error">Validation error output</div>

                 <input type="text" id="title" name="title" value="" size="50"
                         tal:attributes="value Title;"/>
             </div>

             <div tal:define="error errors/Description|nothing;
                  Description request/description | context/Description"
                  tal:attributes="class python:error and 'field error' or 'field'">

                 <div class="label">Description</div>

                 <div tal:content="error">Validation error output</div>

                 <textarea rows="5" cols="80" id="description" name="description"
                           tal:content="Description" ></textarea>
             </div>

             <div tal:define="error errors/urls|nothing;
                  Urls request/urls | context/urls"
                  tal:attributes="class python:error and 'field error' or 'field'">

                 <div class="label">Urls</div>

                 <div tal:content="error">Validation error output</div>

                 <div class="formHelp">Links to part details/content elsewhere on you site - or the internet.</div>

                 <textarea rows="5" cols="80" id="urls" name="urls"
                           tal:content="python:'\n'.join(Urls)" ></textarea>
             </div>


         <fieldset>

             <legend>warehousing</legend>

             <table summary="">
               <tr>
                  <td class="label" for="id" i18n:translate="label_unit">Unit</td>
                  <td class="field"><input type="text" name="unit" value="" 
                                           tal:attributes="value context/unit"/></td>
               </tr>

               <tr>
                  <td class="label" for="id" i18n:translate="label_weight">Weight</td>
                  <td class="field"><input type="text" name="weight:float" align="right" value="" 
                                           tal:attributes="value context/weight"/></td>
               </tr>

               <tr>
                  <td class="label" for="id" i18n:translate="label_onhand">Onhand</td>
                  <td class="field"><input type="text" name="onhand:float" align="right" value="" 
                                           tal:attributes="value context/onhand"/></td>
               </tr>
             </table>
         </fieldset>

         <fieldset>

             <legend>part pricing</legend>

             <table summary="">
               <tr>
                 <td class="label" for="id" i18n:translate="label_sellprice">Sell Price</td>
                 <td class="field">
                    <input type="text" name="sellprice:currency" size="12" align="right"
                           tal:attributes="value context/sellprice"/>
                 </td>
               </tr>

               <tr>
                 <td class="label" for="id" i18n:translate="label_listprice">Purchase Price</td>
                 <td class="field">
                     <input type="text" name="listprice:currency" size="12" align="right"
                            tal:attributes="value context/listprice"/>
                 </td>
               </tr>

               <tr>
                 <td class="label" for="id" i18n:translate="label_lastcost">Last Cost</td>
                 <td class="field">
                     <input type="text" name="lastcost:currency" size="12" align="right"
                            tal:attributes="value context/lastcost"/>
                 </td>
               </tr>
             </table>
         </fieldset>

         <fieldset>

             <legend>accounting</legend>

             <table summary="">
               <tr>
                  <td class="label" for="id" i18n:translate="label_inventory_account">Inventory Account</td>
                  <td class="field">
                    <div class="formHelp">This account is updated to reflect you inventory for every purchase/sale
                        of this part.</div>
                    <select name="inventory_accno"> 
                      <option tal:repeat="account python: context.available_accounts('part_inv')"
                              tal:content="account/prettyTitle"
                              tal:attributes="value account/getId;
                                              selected python: account.getId() == context.inventory_acct and 1 or 0"/>
                    </select>
                   </td>
               </tr>
               <tr>
                  <td class="label" for="id" i18n:translate="label_income_account">Income Account</td>
                  <td class="field">
                    <div class="formHelp">This account is updated to reflect your revenues from sales
                        of this part.</div>
                    <select name="income_accno"> 
                      <option tal:repeat="account python: context.available_accounts('part_inc')"
                              tal:content="account/prettyTitle"
                              tal:attributes="value account/getId;
                                              selected python: account.getId() == context.income_acct and 1 or 0"/>
                    </select>
                   </td>
               </tr>
               <tr>
                  <td class="label" for="id" i18n:translate="label_onhand">Expense Account</td>
                  <td class="field">
                    <div class="formHelp">This account is updated to reflect your cost of goods sold from sales
                        of this part.</div>
                    <select name="expense_accno"> 
                      <option tal:repeat="account python: context.available_accounts('part_cogs')"
                              tal:content="account/prettyTitle"
                              tal:attributes="value account/getId;
                                              selected python: account.getId() == context.expense_acct and 1 or 0"/>
                    </select>
                   </td>
               </tr>
             </table>

         </fieldset>

         <div class="formControls" colspan="2">
               <input class="context"  type="submit" name="form.button.Edit"
                      value="Edit" i18n:attributes="Edit" />
         </div>

         <input type="hidden" name="form.submitted" value="1"/>
      </form>
 
      <div tal:replace="structure provider:plone.belowcontentbody">
           Document actions (print, sendto etc)
      </div>
  </div>
 
</body>
</html>
