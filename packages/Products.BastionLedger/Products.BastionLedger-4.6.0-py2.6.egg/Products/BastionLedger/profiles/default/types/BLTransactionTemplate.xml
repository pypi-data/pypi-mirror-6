<?xml version="1.0"?>
<object name="BLTransactionTemplate"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title"></property>
 <property
    name="description">A template for generating a transaction</property>
 <property name="content_icon">bltransaction_tpl.gif</property>
 <property name="content_meta_type">BLTransactionTemplate</property>
 <property name="product">BastionLedger</property>
 <property name="factory">addBLTransactionTemplate</property>
 <property name="immediate_view">folder_edit_form</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
  <element value="BLEventTemplate"/>
 </property>
 <property name="allow_discussion">False</property>
 <alias from="(Default)" to="folder_view"/>
 <alias from="edit" to="folder_edit_form"/>
 <alias from="view" to="folder_view"/>
 <action title="Accounts" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/view" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object"
    condition_expr="" url_expr="string:${object_url}/edit"
    visible="True">
  <permission value="Manage properties"/>
 </action>
</object>
