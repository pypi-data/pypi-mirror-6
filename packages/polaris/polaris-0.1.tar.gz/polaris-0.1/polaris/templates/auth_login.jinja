{% extends "_base.jinja" %}

{% from "_sidebar.jinja" import sidebar %}

{% block body %}
<body>

  {{ sidebar(icons=[])}}

  <div class="content col-md-12">
    <div class="container" style="width:67%; margin-top:3%;">
      <form style="text-align:center;" action="{{ url_for('auth.login') }}" method="post" class="form-inline" role="form">
        <div class="form-group">
          {{ form.csrf_token }}
        </div>
        <div class="form-group">
          {{ form.email.label(class="sr-only") }}
          {{ form.email(class="form-control", placeholder="Email")  }}
        </div>
        <div class="form-group">
          {{ form.password.label(class="sr-only") }}
          {{ form.password(class="form-control", placeholder="Password") }}
        </div>
        <button type="submit" class="btn btn-info">Login</button>
      </form>

      {% for field, errors in form.errors.items() %}
        <p>
          {{ field }} validation failed: {% for error in errors %}{{ error }}{% endfor %}
        </p>
      {% endfor %}
    </div>
  </div>
</body>
{% endblock %}
